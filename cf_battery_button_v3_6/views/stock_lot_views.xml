<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vista formulario -->
    <record id="view_stock_lot_form_inherit_bat100_v3_6" model="ir.ui.view">
        <field name="name">stock.lot.form.inherit.bat100.v3.6</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <group>
                    <field name="x_bat100" widget="boolean_toggle"/>
                    <button name="action_toggle_bat100"
                            type="object"
                            string="BaterÃ­a 100%"
                            class="oe_highlight"
                            invisible="x_bat100"/>
                    <button name="action_toggle_bat100"
                            type="object"
                            string="Desmarcar BAT100"
                            class="btn-secondary"
                            invisible="not x_bat100"/>
                </group>
            </field>
        </field>
    </record>

    <!-- Vista lista -->
    <record id="view_stock_lot_tree_inherit_bat100_v3_6" model="ir.ui.view">
        <field name="name">stock.lot.tree.inherit.bat100.v3.6</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.production.lot.tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="x_bat100" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>
</odoo>
