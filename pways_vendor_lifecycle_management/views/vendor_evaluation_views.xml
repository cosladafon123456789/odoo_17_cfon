<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_vendor_evaluation_list" model="ir.ui.view">
        <field name="name">vendor.evaluation.tree</field>
        <field name="model">vendor.evaluation</field>
        <field name="arch" type="xml">
            <tree string="Vendor Evaluations">
                <field name="name"/>
                <field name="vendor_id"/>
                <field name="email"/>
                <field name="phone_no"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="manager_id"/>
                <field name="date_entry"/>
                <field name="business_title"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_vendor_evaluation_form" model="ir.ui.view">
        <field name="name">vendor.evaluation.form</field>
        <field name="model">vendor.evaluation</field>
        <field name="arch" type="xml">
            <form string="Vendor Evaluation">
                <header>
                    <field name="state" widget="statusbar" statusbar_visible="draft,request,approve,reject,cancel"/>

                    <button name="action_request_approval" type="object" string="Request Approval" class="btn-primary" invisible="state in ('reject', 'approve', 'cancel', 'request')"/>

                    <button name="action_approve" type="object" string="Approve" class="btn-primary" invisible="state in ('reject', 'approve', 'cancel', 'draft')"/>

                    <button name="action_reject" type="object" string="Reject" class="btn-primary" invisible="state in ('reject', 'approve', 'cancel', 'draft')"/>

                    <button name="action_cancel" type="object" string="Cancel" class="btn-primary" invisible="state in ('reject', 'approve', 'cancel')"/>

                    <button name="action_draft" type="object" string="Draft" class="btn-primary" invisible="state in ('approve', 'cancel', 'draft', 'request')"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="vendor_id"/>
                            <field name="email"/>
                            <field name="phone_no"/>
                            <field name="manager_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="date_entry"/>
                            <field name="business_title"/>
                            <field name="evaluation_question_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="EVALUATION">
                            <field name="line_ids">
                                <tree editable="bottom" create="false">
                                    <field name="sequence" nolabel="0"/>
                                    <field name="question_name" nolabel="0"/>
                                    <field name="is_applicable" nolabel="0"/>
                                    <field name="rating" widget="rating" nolabel="0"/>
                                    <field name="comment" nolabel="0"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <separator string="EVALUATION REPORT" colspan="4"/>
                    <group>
                        <field name="final_point" readonly="1"/>
                        <field name="final_rating" widget="rating" readonly="1"/>
                        <field name="final_comment"/>
                    </group>
                    <group>
                        <button name="action_calculate_final_rating" type="object" string="Calculate" class="btn-primary">
                        </button>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_vendor_evaluation" model="ir.actions.act_window">
        <field name="name">Vendor Evaluations</field>
        <field name="res_model">vendor.evaluation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu Items -->
    
    <menuitem id="menu_vendor_evaluation"
              name="Vendor Evaluations"
              parent="purchase.menu_procurement_management"
              action="action_vendor_evaluation"
              groups="purchase.group_purchase_manager"/>
</odoo>