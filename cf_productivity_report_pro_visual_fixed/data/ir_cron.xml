<record id="cron_cf_productivity_rebuild_ranking" model="ir.cron">
    <field name="name">CF Productividad: Recalcular Ranking Diario</field>
    <field name="model_id" eval="obj('ir.model').search([('model', '=', 'cf.productivity.ranking')], limit=1).id"/>
    <field name="state">code</field>
    <field name="code">model.action_rebuild_today()</field>
    <field name="interval_type">days</field>
    <field name="interval_number">1</field>
    <field name="numbercall">-1</field>
    <field name="active">True</field>
    <field name="nextcall">2025-10-19 20:00:00</field>
</record>