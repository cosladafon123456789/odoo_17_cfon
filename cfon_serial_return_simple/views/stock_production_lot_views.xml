
<odoo>
    <!-- Simple action to see lots with 2+ returns -->
    <record id="action_lots_with_returns" model="ir.actions.act_window">
        <field name="name">Lotes 2+ devoluciones</field>
        <field name="res_model">stock.production.lot</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('return_count','>=',2)]</field>
    </record>

    <menuitem id="menu_lots_with_returns"
              parent="stock.menu_traceability"
              name="Lotes 2+ devoluciones"
              action="action_lots_with_returns"
              sequence="99"/>
</odoo>
