<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_move_form_inherit_sii_particular" model="ir.ui.view">
        <field name="name">account.move.formi.inherit.sii.particular</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="perso_cfon.view_move_form_inherit_gap"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_rebu']" position="after">
                <field name="is_particular" invisible="not is_rebu or move_type != 'in_invoice'"/>
            </xpath>
        </field>
    </record>
</odoo>