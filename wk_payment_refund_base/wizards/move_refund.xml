<odoo>
    <data>
        <record id="view_account_move_base_refund_wizard_form" model="ir.ui.view">
            <field name="name">base.account.move.refund.wizard.form</field>
            <field name="model">payment.move.refund.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="invoice_id" />
                            <field name="currency_id" invisible="1" />
                            <field name="provider_code" invisible="1" />
                        </group>
                        <group>
                            <field name="total_amount" widget="monetary"
                                options="{'currency_field': 'currency_id'}" />
                        </group>
                    </group>
                    <group col="2">
                        <group col="1">
                            <field name="journal_id" invisible="context.get('is_paid')"
                                options="{'no_create': True}" required="not context.get('is_paid')"/>
                        </group>
                    </group>
                    <group>
                        <field name="refund_reason" required="1" />
                    </group>
                    <footer>
                        <button string="Refund" name="base_refund_process" type="object"
                            class="btn-primary" />
                        <button string="Discard" class="btn-secondary" special="cancel"
                            data-hotkey="x" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
