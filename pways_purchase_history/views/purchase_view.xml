<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
	<record id="view_product_product_line_inherit_purchase_history" model="ir.ui.view">
	  	<field name="name">product.product.form.inherit</field>
	     <field name="model">product.product</field>
	     <field name="inherit_id" ref="product.product_normal_form_view"/>
	     <field name="arch" type="xml">
	     	<xpath expr="//field[@name='name']" position="after">
	     		<field name="purchase_lines" invisible="1"/>
	     	</xpath>
	     	<xpath expr="//page/field[@name='variant_seller_ids']" position="after">
                <separator string="Purchase History"/>
                <field name="purchase_history_lines">
                    <tree string="History">
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="product_qty"/>
                        <field name="price_unit"/>
                    </tree>
                </field>
	        </xpath>
	    </field>
     </record>
     <record id="view_sale_order_line__from_view_inherit" model="ir.ui.view">
     	<field name="name">purchase.order.form.inherited</field>
        <field name="model">purchase.order</field>
        <field name="priority" eval="15"/>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
        	<xpath expr="//page/field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
                <button name="purchase_history" type="object" class="fa fa-list" title="History" invisible="state != 'draft'"/>
            </xpath>
        </field>
    </record>
</odoo>
