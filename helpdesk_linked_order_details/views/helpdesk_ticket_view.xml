    <field name="model">helpdesk.ticket</field>
    <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form/sheet" position="inside">
        <group string="Productos del Pedido Asociado">
          <field name="linked_order_line_ids" nolabel="1">
            <tree string="Productos del pedido" editable="false">
              <field name="order_name"/>
              <field name="date_order" string="Fecha de Compra"/>
              <field name="product_id"/>
              <field name="serial_number" string="NÂº Serie"/>
            </tree>
          </field>
        </group>
      </xpath>
    </field>
  </record>
</odoo>
