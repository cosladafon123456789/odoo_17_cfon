<odoo>
    <!-- Acciones -->
    <record id="action_cf_productivity_lines" model="ir.actions.act_window">
        <field name="name">Dashboard de Productividad</field>
        <field name="res_model">cf.productivity.line</field>
        <field name="view_mode">tree,graph,pivot,form</field>
        <field name="context">{'search_default_today': 1, 'group_by': ['type','user_id']}</field>
    </record>

    <record id="action_cf_goals" model="ir.actions.act_window">
        <field name="name">Objetivos de Productividad</field>
        <field name="res_model">cf.productivity.goal</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú con restricción de grupo (admins + grupo acceso) -->
    <menuitem id="menu_cf_productivity_root" name="Productividad CF"
              sequence="5" groups="base.group_system,cf_productivity_report_pro.group_cf_productivity_access"/>
    <menuitem id="menu_cf_productivity_dashboard" name="Dashboard"
              parent="menu_cf_productivity_root" action="action_cf_productivity_lines" sequence="1"/>
    <menuitem id="menu_cf_productivity_goals" name="Objetivos"
              parent="menu_cf_productivity_root" action="action_cf_goals" sequence="2"/>
</odoo>
