
<odoo>
  <data>
    <record id="view_cf_productivity_ranking_tree" model="ir.ui.view">
      <field name="name">cf.productivity.ranking.tree</field>
      <field name="model">cf.productivity.ranking</field>
      <field name="arch" type="xml">
        <tree string="Ranking">
          <field name="ranking_date"/>
          <field name="user_id"/>
          <field name="score"/>
          <field name="lines_count"/>
        </tree>
      </field>
    </record>

    <record id="action_cf_productivity_ranking" model="ir.actions.act_window">
      <field name="name">Ranking</field>
      <field name="res_model">cf.productivity.ranking</field>
      <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_cf_productivity_ranking_action" parent="menu_cf_productivity_ranking" action="action_cf_productivity_ranking" sequence="10"/>
  </data>
</odoo>
