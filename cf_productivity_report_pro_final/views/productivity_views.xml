
<odoo>
  <data>
    <!-- Menú principal -->
    <menuitem id="menu_cf_productivity_root" name="📊 Productividad" sequence="10"/>
    <menuitem id="menu_cf_productivity_report" name="🧾 Informe" parent="menu_cf_productivity_root" sequence="10"/>
    <menuitem id="menu_cf_productivity_ranking" name="🏆 Ranking" parent="menu_cf_productivity_root" sequence="20"/>
    <menuitem id="menu_cf_productivity_stats" name="📈 Estadísticas" parent="menu_cf_productivity_root" sequence="30"/>

    <!-- Vista list del reporte -->
    <record id="view_cf_productivity_report_tree" model="ir.ui.view">
      <field name="name">cf.productivity.report.tree</field>
      <field name="model">cf.productivity.report</field>
      <field name="arch" type="xml">
        <tree string="Informe de Productividad" create="true" edit="true">
          <field name="name"/>
          <field name="user_id"/>
          <field name="action_type"/>
          <field name="reason"/>
          <field name="date_time"/>
          <field name="time_since_previous"/>
        </tree>
      </field>
    </record>

    <record id="action_cf_productivity_report" model="ir.actions.act_window">
      <field name="name">Informe de Productividad</field>
      <field name="res_model">cf.productivity.report</field>
      <field name="view_mode">tree,form,pivot,graph</field>
    </record>

    <menuitem id="menu_cf_productivity_report_action" parent="menu_cf_productivity_report" action="action_cf_productivity_report" sequence="10"/>
  </data>
</odoo>
