
<odoo>
  <data>
    <record id="view_cf_productivity_stats_tree" model="ir.ui.view">
      <field name="name">cf.productivity.stats.tree</field>
      <field name="model">cf.productivity.stats</field>
      <field name="arch" type="xml">
        <tree string="Estadísticas">
          <field name="name"/>
          <field name="user_id"/>
          <field name="avg_interval"/>
        </tree>
      </field>
    </record>

    <record id="action_cf_productivity_stats" model="ir.actions.act_window">
      <field name="name">Estadísticas</field>
      <field name="res_model">cf.productivity.stats</field>
      <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_cf_productivity_stats_action" parent="menu_cf_productivity_stats" action="action_cf_productivity_stats" sequence="10"/>
  </data>
</odoo>
