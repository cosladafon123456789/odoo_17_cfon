<odoo>
  <data>
<record id="mail_template_cf_productivity_daily" model="mail.template">
      <field name="name">Resumen diario de productividad</field>
      <field name="model_id" ref="base.model_res_users"/>
      <field name="subject">Resumen diario de productividad - ${object.name}</field>
      <field name="email_from">${(user.email_formatted or '')}</field>
      <field name="email_to">${object.email}</field>
      <field name="body_html" type="html">
        <![CDATA[
          <p>Hola ${object.name},</p>
          <p>Adjuntamos el resumen diario de productividad.</p>
          <ul>
            <li>Acciones hoy: (ver menú Productividad → Ranking / Estadísticas)</li>
            <li>Tiempo medio: ver estadísticas</li>
          </ul>
        ]]>
      </field>
    </record>
  </data>
</odoo>
