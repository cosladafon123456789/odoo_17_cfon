<odoo>
	<record id="sale_order_line_tree_view" model="ir.ui.view">
        <field name="name">sale.order.line.view.tree</field>
        <field name="model">sale.order.line</field>
        <field name="arch" type="xml">
            <tree string="Sale Order Lines" editable="top">
                <field name="order_id"/>
                <field name="order_partner_id"/>
                <field name="date_order"/>
                <field name="product_id" column_invisible="1"/>
                <field name="imei_ids" widget="many2many_tags"/>
                <field name="product_uom_qty" string="Qty"/>
                <field name="picking_status"/>
                <field name="tracking_number"/>
                <field name="source_id" readonly="0"/>
                <field name="carrier_id"/>
                <field name="amount_total"/>
                <field name="invoice_status"/>
                <field name="is_rebu" readonly="0"/>
                <field name="is_validated" column_invisible="1"/>
                <button name="action_validation" type="object" string="Validation" class="oe_highlight"/>
            </tree>
        </field>
    </record>
    <record id="action_sale_order_line_custom_tree" model="ir.actions.act_window">
            <field name="name">Shipping Sale Orders</field>
            <field name="res_model">sale.order.line</field>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="sale_order_line_tree_view"/>
        </record>

        <menuitem id="menu_sale_order_custom_tree"
            name="Shipping Sale Orders"
            parent="sale.sale_order_menu"
            action="action_sale_order_line_custom_tree"
            sequence="60"/>
</odoo>