<odoo>
    <!-- =========================================================== -->
    <!-- Vista árbol líneas de movimiento -->
    <!-- =========================================================== -->
    <record id="view_move_line_tree_bat100" model="ir.ui.view">
        <field name="name">stock.move.line.tree.bat100</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="after">
                <field name="bat100" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>

    <!-- =========================================================== -->
    <!-- Formulario de líneas de movimiento -->
    <!-- =========================================================== -->
    <record id="view_stock_move_line_form_bat100" model="ir.ui.view">
        <field name="name">stock.move.line.form.bat100</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="after">
                <field name="bat100" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>

    <!-- =========================================================== -->
    <!-- Popup de operaciones detalladas -->
    <!-- =========================================================== -->
    <record id="view_move_line_detailed_operations_bat100" model="ir.ui.view">
        <field name="name">stock.move.line.detailed.operations.bat100</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_id']" position="after">
                <field name="bat100" widget="boolean_toggle" options="{'terminology': 'switch'}"/>
            </xpath>
        </field>
    </record>

    <!-- =========================================================== -->
    <!-- Formulario de lotes/series -->
    <!-- =========================================================== -->
    <record id="view_stock_lot_form_bat100" model="ir.ui.view">
        <field name="name">stock.lot.form.bat100</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="bat100" widget="boolean_toggle" options="{'terminology': 'switch'}" readonly="0"/>
            </xpath>
        </field>
    </record>

    <!-- =========================================================== -->
    <!-- Búsqueda de lotes -->
    <!-- =========================================================== -->
    <record id="view_stock_lot_search_bat100" model="ir.ui.view">
        <field name="name">stock.lot.search.bat100</field>
        <field name="model">stock.lot</field>
        <field name="arch" type="xml">
            <search string="Buscar Números de Serie / Lotes">
                <field name="name"/>
                <field name="product_id"/>
                <filter name="bat100_true" string="BAT100" domain="[('bat100','=',True)]"/>
                <filter name="bat100_false" string="Sin BAT100" domain="[('bat100','=',False)]"/>
            </search>
        </field>
    </record>
</odoo>
