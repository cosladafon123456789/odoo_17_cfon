
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_lot_form_inherit_return_info_warn" model="ir.ui.view">
        <field name="name">stock.production.lot.form.return.info.warn</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <div class="alert alert-warning" role="alert" attrs="{'invisible': [('returned_many_times','=',False)]}">
                    <span>⚠️ This serial/lot has been returned multiple times (count: <field name="return_count" class="oe_inline" readonly="1"/>).</span>
                </div>
            </xpath>
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Returns">
                    <group>
                        <field name="return_count" readonly="1"/>
                        <field name="returned_many_times" readonly="1"/>
                    </group>
                    <button name="action_view_return_moves" string="View Return Moves" type="object" class="btn-secondary"/>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
