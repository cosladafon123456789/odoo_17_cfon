<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_vendor_backlist_tree" model="ir.ui.view">
        <field name="name">vendor.backlist.tree</field>
        <field name="model">vendor.backlist</field>
        <field name="arch" type="xml">
            <tree string="Vendor Blacklist">
                <field name="name"/>
                <field name="vendor_id" widget="many2many_tags"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_vendor_backlist_form" model="ir.ui.view">
        <field name="name">vendor.backlist.form</field>
        <field name="model">vendor.backlist</field>
        <field name="arch" type="xml">
            <form string="Vendor Blacklist">
                <header>
                    <button name="action_draft" type="object" string="Set to Draft"
                           class="btn-primary" invisible="state in ('draft','approve','reject', 'cancel')"/>
                    <button name="action_approve" type="object" string="Approve"
                            class="btn-primary" invisible="state in ('approve','reject', 'cancel')"/>
                    <button name="action_reject" type="object" string="Reject"
                            class="btn-primary" invisible="state in ('draft','reject', 'cancel')"/>
                    <button name="action_cancel" type="object" string="Cancel"
                            class="btn-primary" invisible="state in ('approve','reject','cancel')"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approve,reject,cancel"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <!-- <field name="vendor_id" widget="many2many_tags" domain="[('supplier_rank', '>', 0)]" context="{'default_is_company': True, 'default_supplier_rank': 1}"/> -->
                            <field name="vendor_id" widget="many2many_tags" context="{'res_partner_search_mode': 'supplier', 'show_vat': True}" placeholder="Name, TIN, Email, or Reference"/>

                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_vendor_backlist" model="ir.actions.act_window">
        <field name="name">Vendor Blacklist</field>
        <field name="res_model">vendor.backlist</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_vendor_backlist" 
        name="Vendor Blacklist" 
        parent="purchase.menu_purchase_config" 
        action="action_vendor_backlist"/>

</odoo>