<?xml version="1.0" encoding="utf-8"?>
<odoo>

   <record id="view_stock_lot_form_inherit" model="ir.ui.view">
        <field name="name">stock.lot.form.inherit.return.count</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="return_count" readonly="1"/>
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_view_scrap" type="object" icon="fa-trash">
                    <field name="scrap_count" widget="statinfo" string="Scrap"/>
                </button>
            </xpath>
        </field>
    </record>

    <record id="view_stock_lot_form_inherit_pways_scrap" model="ir.ui.view">
        <field name="name">stock.lot.inherit.scrap</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="pways_repair_parts.view_stock_lot_form_inherit_pways"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_scrap_wizard"
                        type="object"
                        string="Scrap Lot/Serial"
                        class="btn-danger"/>
            </xpath>
        </field>
    </record>

    <record id="view_picking_form_inherit_serial_warning" model="ir.ui.view">
        <field name="name">stock.picking.form.serial.return.warning</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="has_serials_with_multiple_returns" invisible="1"/>
            </xpath>
            <xpath expr="//sheet" position="before">
                <div class="alert alert-warning" role="alert"
                    invisible="has_serials_with_multiple_returns == False">
                    Advertencia: El contiene lotes problemáticos
                </div>
            </xpath>
        </field>
    </record>

    <record id="action_production_lot_form_return" model="ir.actions.act_window">
        <field name="name">Lots/Serial Numbers with Multiple Returns</field>
        <field name="res_model">stock.lot</field>
        <field name="view_ids"
               eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'tree', 'view_id': ref('stock.view_production_lot_tree')}),
                      (0, 0, {'view_mode': 'kanban', 'view_id': ref('stock.view_production_lot_kanban')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('stock.view_production_lot_form')})]"/>
        <field name="search_view_id" ref="stock.search_product_lot_filter"/>
        <field name="domain">[('return_count', '>=', 2)]</field>
        <field name="context">{'search_default_group_by_product': 1, 'display_complete': True, 'default_company_id': allowed_company_ids[0]}</field>
    </record>

    <menuitem id="menu_stock_lot_multiple_returns"
        name="Números de serie con múltiples retornos"
        parent="stock.menu_stock_inventory_control"
        action="action_production_lot_form_return"
        sequence="150"/>


    <record id="view_move_form_inherit_warning" model="ir.ui.view">
        <field name="name">stock.move.form.warning</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="has_problematic_batches" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='move_line_ids']" position="before">
                <div class="alert alert-warning" role="alert"
                    invisible="has_problematic_batches == False">
                    Advertencia: El contiene lotes problemáticos
                </div>
            </xpath>
        </field>
    </record>


</odoo>
