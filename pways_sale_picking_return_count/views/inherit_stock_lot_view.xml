<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="view_stock_lot_form_inherit" model="ir.ui.view">
        <field name="name">stock.lot.form.inherit.return.count</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='ref']" position="after">
                <field name="return_count" readonly="1"/>
            </xpath>
            <xpath expr="//sheet" position="before">
            <!-- <xpath expr="//button[@name='button_create_rma']" position="after"> -->
                <header>
                    <button name="action_open_scrap_wizard" type="object" string="Scrap Lot/Serial" class="btn-danger"/>
                </header>
            </xpath>
            <xpath expr="//div[hasclass('oe_button_box')]" position="inside">
                <button name="action_view_scrap" type="object" icon="fa-trash">
                    <field name="scrap_count" widget="statinfo" string="Scrap"/>
                </button>
            </xpath>
        </field>
    </record>

    <record id="view_picking_form_inherit_serial_warning" model="ir.ui.view">
        <field name="name">stock.picking.form.serial.return.warning</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='origin']" position="after">
                <field name="has_serials_with_multiple_returns" invisible="1"/>
            </xpath>
            <xpath expr="//sheet" position="before">
                <div class="alert alert-warning" role="alert"
                    invisible="has_serials_with_multiple_returns == False">
                    Warning: The contains problematic batches
                </div>
            </xpath>
        </field>
    </record>
</odoo>
