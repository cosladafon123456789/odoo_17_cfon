<odoo>
    <record id="mail_template_return_count_alert" model="mail.template">
        <field name="name">Return Count Alert</field>
        <field name="model_id" ref="stock.model_stock_lot"/>
        <field name="subject">[ALERT] Lot/Serial ${object.name} has been returned twice</field>
        <field name="email_from">${(user.email_formatted or '')|safe}</field>
        <field name="partner_to">${','.join(map(str, ctx.get('recipient_ids', [])))}</field>
        <field name="body_html">
            <![CDATA[
            <p>Hello,</p>
            <p>The lot/serial <b>${object.name}</b> for product <b>${object.product_id.display_name}</b> 
            has been returned <b>${object.return_count}</b> times.</p>
            <p>Please review this case.</p>
            ]]>
        </field>
    </record>
</odoo>
