<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lot_scrap_wizard_form" model="ir.ui.view">
        <field name="name">serial.scrap.wizard.form</field>
        <field name="model">serial.scrap.wizard</field>
        <field name="arch" type="xml">
            <form string="Scrap Lot/Serial">
                <group>
                    <group>
                        <field name="lot_id" readonly="1"/>
                        <field name="product_id" readonly="1"/>
                        <field name="location_id" />
                    </group>
                    <group>
                        <field name="scrap_location_id"/>
                        <field name="scrap_qty"/>
                    </group>
                </group>
                <footer>
                    <button string="Scrap" type="object" name="action_scrap_lot" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
