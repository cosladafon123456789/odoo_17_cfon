<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_lot_scrap_wizard_form" model="ir.ui.view">
        <field name="name">serial.scrap.wizard.form</field>
        <field name="model">serial.scrap.wizard</field>
        <field name="arch" type="xml">
            <form string="Scrap Lot/Serial">
                <group>
                    <group>
                        <field name="lot_id" readonly="1"/>
                        <field name="product_id" readonly="1"/>
                        <field name="location_id" />
                    </group>
                    <group>
                        <field name="scrap_location_id"/>
                        <field name="scrap_qty"/>
                    </group>
                </group>
                <footer>
                    <button string="Scrap" type="object" name="action_scrap_lot" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_stock_return_picking_form_inherit_warning" model="ir.ui.view">
        <field name="name">stock.return.picking.form.warning</field>
        <field name="model">stock.return.picking</field>
        <field name="inherit_id" ref="stock.view_stock_return_picking_form"/>
        <field name="arch" type="xml">
            <!-- <xpath expr="//field[@name='product_return_moves']/tree/field[@name='move_id']" position="after">
            </xpath> -->
             <xpath expr="//footer" position="before">
                <field name="has_problematic_batch" invisible="1"/>
                <div class="alert alert-warning" role="alert" invisible="has_problematic_batch == False">
                    Advertencia: El contiene lotes problemáticos
                </div>
            </xpath>
        </field>
    </record>

    <record id="repair_action_wizard_form_inherit_warning" model="ir.ui.view">
        <field name="name">repair_action_wizard_form_warning</field>
        <field name="model">repair.action.wizard</field>
        <field name="inherit_id" ref="pways_sale_repair_management.repair_action_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_location_id']" position="after">
                <field name="has_serials_with_multiple_returns" invisible="1"/>
            </xpath>
             <xpath expr="//footer" position="before">
                <!-- <field name="has_problematic_batch" invisible="1"/> -->
                <div class="alert alert-warning" role="alert" invisible="has_serials_with_multiple_returns == False">
                    Advertencia: El contiene lotes problemáticos
                </div>
            </xpath>
        </field>
    </record>

</odoo>
