<odoo>
    <record id="view_lot_form_inherit_icloud" model="ir.ui.view">
        <field name="name">stock.lot.form.icloud</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_check_icloud"
                        type="object"
                        string="Comprobar iCloud"
                        class="oe_stat_button btn-primary"
                        icon="fa-cloud"/>
            </xpath>
        </field>
    </record>
</odoo>
