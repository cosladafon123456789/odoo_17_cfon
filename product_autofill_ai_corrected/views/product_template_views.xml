<odoo>
    <record id="view_product_form_ai" model="ir.ui.view">
        <field name="name">product.template.form.ai</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <button name="action_fill_with_ai" string="Rellenar con IA" type="object" class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>
