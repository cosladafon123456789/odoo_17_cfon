<odoo>
    <!-- Árbol -->
    <record id="view_repair_report_tree" model="ir.ui.view">
        <field name="name">repair.report.tree</field>
        <field name="model">repair.report</field>
        <field name="arch" type="xml">
            <tree string="Informe de Reparaciones">
                <field name="date"/>
                <field name="technician_id"/>
                <field name="reason"/>
                <field name="repair_id"/>
            </tree>
        </field>
    </record>

    <!-- Vista Gráfica Barras -->
    <record id="view_repair_report_graph_bar" model="ir.ui.view">
        <field name="name">repair.report.graph.bar</field>
        <field name="model">repair.report</field>
        <field name="arch" type="xml">
            <graph string="Reparaciones por día / motivo" type="bar">
                <field name="date" type="row" interval="day"/>
                <field name="reason" type="col"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vista Gráfica Circular -->
    <record id="view_repair_report_graph_pie" model="ir.ui.view">
        <field name="name">repair.report.graph.pie</field>
        <field name="model">repair.report</field>
        <field name="arch" type="xml">
            <graph string="Distribución por motivo" type="pie">
                <field name="reason" type="row"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- Vista de búsqueda con filtro Hoy -->
    <record id="view_repair_report_search" model="ir.ui.view">
        <field name="name">repair.report.search</field>
        <field name="model">repair.report</field>
        <field name="arch" type="xml">
            <search string="Buscar informe">
                <filter name="today" string="Hoy"
                    domain="[('date','>=', (context_today().strftime('%%Y-%%m-%%d 00:00:00'))), ('date','<=', (context_today().strftime('%%Y-%%m-%%d 23:59:59')))]"/>
                <field name="technician_id"/>
                <field name="reason"/>
                <field name="repair_id"/>
                <field name="date" filter_domain="[]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Técnico" context="{'group_by': 'technician_id'}"/>
                    <filter string="Motivo" context="{'group_by': 'reason'}"/>
                    <filter string="Día" context="{'group_by': 'date:day'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_repair_report" model="ir.actions.act_window">
        <field name="name">Informe de Reparaciones</field>
        <field name="res_model">repair.report</field>
        <field name="view_mode">tree,graph</field>
        <field name="search_view_id" ref="view_repair_report_search"/>
        <field name="context">{'search_default_today': 1}</field>
        <field name="help" type="html">
            <p>
                Aquí verás los registros de reparaciones finalizadas por técnico y motivo.
                Usa la vista gráfica para analizar por día, técnico o motivo.
            </p>
        </field>
    </record>
</odoo>
