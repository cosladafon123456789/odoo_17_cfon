<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_attendance_approval_rule_admin" model="ir.rule">
            <field name="name">Admin: View All Attendance Approvals</field>
            <field name="model_id" ref="model_hr_attendance_approval"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        </record>

        <record id="hr_attendance_approval_rule_user" model="ir.rule">
            <field name="name">User: View their Own Attendance Approvals</field>
            <field name="model_id" ref="model_hr_attendance_approval"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>