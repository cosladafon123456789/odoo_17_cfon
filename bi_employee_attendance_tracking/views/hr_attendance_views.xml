<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
      <record id="hr_attendance_tree_inherit" model="ir.ui.view">
        <field name="name">hr.attendance.inherit.tree</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.view_attendance_tree"/>
        <field name="arch" type="xml">

                <xpath expr="//field[@name='check_in']" position="after">
                    <field name="check_in_delay_message"/>
                     <field name="checkin_time_difference" readonly="1"/>
                </xpath>

                <xpath expr="//field[@name='check_out']" position="after">
                    <field name="check_out_delay_message"/>
                   
                    <field name="checkout_time_difference" readonly="1"/>
                </xpath>
        </field>
      </record>

      <record id="hr_attendance_form_inherit" model="ir.ui.view">
        <field name="name">hr.attendance.inherit.form</field>
        <field name="model">hr.attendance</field>
        <field name="inherit_id" ref="hr_attendance.hr_attendance_view_form"/>
        <field name="arch" type="xml">

                <xpath expr="//field[@name='check_in']" position="after">
                    <field name="check_in_delay_message"/>
                     <field name="checkin_time_difference" readonly="1"/>
                </xpath>

                <xpath expr="//field[@name='check_out']" position="after">
                    <field name="check_out_delay_message" readonly="1"/>
                    <field name="checkout_time_difference" readonly="1"/>
                </xpath>
        </field>
      </record>

        <menuitem id="menu_hr_attendance_approval" name="Attendance Approval" action="bi_employee_attendance_tracking.action_hr_attendance_approval"
         parent="hr_attendance.menu_hr_attendance_root"/> 
    </data>
</odoo>
