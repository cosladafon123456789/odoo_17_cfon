<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <record id="hr_attendance_approval_view_form" model="ir.ui.view">
     <field name="name">hr.attendance.approval.form</field>
    <field name="model">hr.attendance.approval</field>
    <field name="arch" type="xml">
            <form string="Attendace Approval">
                <header>
                   <button name="action_approve" class="btn btn-primary" string="Approve" type="object" invisible ="state == 'approve'" groups = "bi_employee_attendance_tracking.group_delay_approval_attendance_manager"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approve"/>
                </header>
                <sheet>

                    <group>
                        <group col="1">
                            <field name="name" invisible="1"/>
                            <field name="employee_id" widget="many2one_avatar_user"/>
                            <field name="check_in" options="{'rounding': 0}"/>
                            <field name="check_in_delay_message"/>
                            <field name="checkin_time_difference"/>
                            <field name="check_out" options="{'rounding': 0}"/>
                            <field name="check_out_delay_message"/>
                            <field name="checkout_time_difference"/>
                        </group>
                        <group col="2">
                            <field name="worked_hours" widget="float_time"/>
                            <field name="overtime_hours" widget="float_time" string="Extra Hours"/>
                        </group>
                    </group>

                    <separator string="Check In"/>
                    <group colspan="2">
                        <group>
                            <group>
                                <field name="in_mode"/>
                                <field name="in_ip_address" invisible="in_mode == 'manual'"/>
                                <field name="in_browser" invisible="in_mode == 'manual'"/>
                            </group>
                        </group>
                    </group>

                    <separator string="Check Out" invisible="not check_out"/>
                    <group colspan="2" invisible="not check_out">
                        <group>
                            <group>
                                <field name="out_mode" string="Mode"/>
                                <field name="out_ip_address" string="IP Address" invisible="in_mode == 'manual'"/>
                                <field name="out_browser" string="Browser" invisible="in_mode == 'manual'"/>
                            </group>
                        </group>
                    </group>

                </sheet>

                <div class="oe_chatter">
                    <field name="message_ids"/>
                </div>

            </form>
        </field>
    </record>

     <record id="hr_attendance_approval_view_tree" model="ir.ui.view">
        <field name="name">hr.attendance.approval.tree</field>
        <field name="model">hr.attendance.approval</field>
        <field name="arch" type="xml">
            <tree>
                 <field name="employee_id" widget="many2one_avatar_user"/>
                <field name="check_in" options="{'rounding': 0}"/>
                 <field name="check_in_delay_message"/>
                 <field name="checkin_time_difference"/>
                <field name="check_out" options="{'rounding': 0}"/>
                 <field name="check_out_delay_message"/>
                 <field name="checkout_time_difference"/>
                 <field name="worked_hours" widget="float_time"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_attendance_approval" model="ir.actions.act_window">
        <field name="name">Attendance Approval</field>
        <field name="res_model">hr.attendance.approval</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="hr_attendance_approval_view_tree"/>
    </record>

</odoo>