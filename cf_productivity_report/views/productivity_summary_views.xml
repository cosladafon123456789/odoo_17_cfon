<odoo>
    <!-- Action & Menu -->
    <record id="action_cf_productivity_summary" model="ir.actions.act_window">
        <field name="name">Resumen Global</field>
        <field name="res_model">cf.productivity.summary</field>
        <field name="view_mode">tree,pivot,graph</field>
        <field name="context">{'search_default_group_user': 1}</field>
    </record>

    <menuitem id="menu_cf_productivity_summary" name="Resumen Global"
              parent="cf_productivity_report.menu_cf_productivity_root"
              action="action_cf_productivity_summary" sequence="2"/>

    <!-- Tree view -->
    <record id="view_cf_productivity_summary_tree" model="ir.ui.view">
        <field name="name">cf.productivity.summary.tree</field>
        <field name="model">cf.productivity.summary</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="is_total" invisible="1"/>
                <field name="user_id" attrs="{'invisible':[('is_total','=',True)]}"/>
                <field name="repairs_done"/>
                <field name="tickets_done"/>
                <field name="orders_done"/>
                <field name="total_done"/>
                <field name="avg_gap_minutes"/>
            </tree>
        </field>
    </record>

    <!-- Pivot -->
    <record id="view_cf_productivity_summary_pivot" model="ir.ui.view">
        <field name="name">cf.productivity.summary.pivot</field>
        <field name="model">cf.productivity.summary</field>
        <field name="arch" type="xml">
            <pivot string="Resumen">
                <field name="user_id" type="row"/>
                <field name="repairs_done" type="measure"/>
                <field name="tickets_done" type="measure"/>
                <field name="orders_done" type="measure"/>
                <field name="total_done" type="measure"/>
                <field name="avg_gap_minutes" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Wizard to run update manually -->
    <record id="view_cf_productivity_update_wizard" model="ir.ui.view">
        <field name="name">cf.productivity.update.wizard.form</field>
        <field name="model">cf.productivity.update.wizard</field>
        <field name="arch" type="xml">
            <form string="Actualizar Productividad Global">
                <group>
                    <label string="Esto recalculará el resumen global con los datos actuales (todas las líneas)."/>
                </group>
                <footer>
                    <button name="action_update_now" type="object" class="btn-primary" string="Actualizar ahora"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_cf_productivity_update_wizard" model="ir.actions.act_window">
        <field name="name">Actualizar Productividad Global</field>
        <field name="res_model">cf.productivity.update.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_cf_productivity_update" name="Actualizar Productividad"
              parent="cf_productivity_report.menu_cf_productivity_root"
              action="action_cf_productivity_update_wizard" sequence="3"/>
</odoo>
