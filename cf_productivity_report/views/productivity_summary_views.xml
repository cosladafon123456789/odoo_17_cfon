<odoo>
    <record id="action_cf_productivity_summary" model="ir.actions.act_window">
        <field name="name">Resumen Global</field>
        <field name="res_model">cf.productivity.summary</field>
        <field name="view_mode">tree,pivot,graph</field>
        <field name="context">{'search_default_group_user': 1}</field>
    </record>

    <menuitem id="menu_cf_productivity_summary" name="Resumen Global"
              parent="cf_productivity_report.menu_cf_productivity_root"
              action="action_cf_productivity_summary" sequence="2"/>

    <record id="view_cf_productivity_summary_tree" model="ir.ui.view">
        <field name="name">cf.productivity.summary.tree</field>
        <field name="model">cf.productivity.summary</field>
        <field name="arch" type="xml">
            <tree create="0">
                <field name="is_total" invisible="1"/>
                <field name="user_id"/>
                <field name="repairs_done"/>
                <field name="tickets_done"/>
                <field name="orders_done"/>
                <field name="total_done"/>
                <field name="avg_gap_time" string="Tiempo medio entre validaciones"/>
                <field name="avg_gap_seconds" invisible="1"/>
                <field name="last_update"/>
            </tree>
        </field>
    </record>

    <record id="view_cf_productivity_summary_pivot" model="ir.ui.view">
        <field name="name">cf.productivity.summary.pivot</field>
        <field name="model">cf.productivity.summary</field>
        <field name="arch" type="xml">
            <pivot string="Resumen">
                <field name="user_id" type="row"/>
                <field name="repairs_done" type="measure"/>
                <field name="tickets_done" type="measure"/>
                <field name="orders_done" type="measure"/>
                <field name="total_done" type="measure"/>
                <field name="avg_gap_seconds" type="measure"/>
            </pivot>
        </field>
    </record>
</odoo>
