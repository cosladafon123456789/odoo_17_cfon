<odoo>
    <record id="view_repair_reason_wizard_form" model="ir.ui.view">
        <field name="name">repair.reason.wizard.form</field>
        <field name="model">repair.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Motivo de reparaciÃ³n">
                <group>
                    <field name="repair_id" invisible="1"/>
                    <field name="super_method" invisible="1"/>
                    <field name="reason" required="1"/>
                    <field name="reason_other" attrs="{'invisible':[('reason','!=','other')], 'required':[('reason','=','other')]}"/>
                </group>
                <footer>
                    <button string="Confirmar y finalizar" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>