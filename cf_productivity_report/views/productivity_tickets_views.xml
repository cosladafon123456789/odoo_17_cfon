<odoo>
    <record id="action_cf_productivity_tickets" model="ir.actions.act_window">
        <field name="name">Tickets Respondidos</field>
        <field name="res_model">cf.productivity.line</field>
        <field name="view_mode">tree,graph,pivot,form</field>
        <field name="domain">[('type','=','ticket')]</field>
    </record>

    <menuitem id="menu_cf_productivity_tickets"
              name="Tickets Respondidos"
              parent="menu_cf_productivity_root"
              action="action_cf_productivity_tickets"
              sequence="2"/>

    <record id="view_cf_productivity_tickets_graph" model="ir.ui.view">
        <field name="name">cf.productivity.line.tickets.graph</field>
        <field name="model">cf.productivity.line</field>
        <field name="arch" type="xml">
            <graph string="Tickets por Usuario" type="bar">
                <field name="user_id" type="row"/>
                <field name="date" type="col"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_cf_productivity_tickets_pivot" model="ir.ui.view">
        <field name="name">cf.productivity.line.tickets.pivot</field>
        <field name="model">cf.productivity.line</field>
        <field name="arch" type="xml">
            <pivot string="Tickets Respondidos">
                <field name="user_id" type="row"/>
                <field name="date" type="col"/>
                <field name="id" type="measure"/>
            </pivot>
        </field>
    </record>
</odoo>