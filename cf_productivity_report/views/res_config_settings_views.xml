<odoo>
    <record id="view_cf_productivity_settings" model="ir.ui.view">
        <field name="name">cf.productivity.settings.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="Productividad CF" string="Productividad CF">
                    <h2>Productividad CF</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="cf_user_repair_id" options="{'no_create_edit': True}"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="cf_user_repair_id"/>
                                <div class="text-muted">Usuario a contabilizar cuando finalice una reparaci√≥n.</div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="cf_user_ticket_id" options="{'no_create_edit': True}"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="cf_user_ticket_id"/>
                                <div class="text-muted">Usuario a contabilizar cuando responda un ticket (Enviar).</div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="cf_user_order_id" options="{'no_create_edit': True}"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="cf_user_order_id"/>
                                <div class="text-muted">Usuario a contabilizar cuando valide una entrega de venta.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>