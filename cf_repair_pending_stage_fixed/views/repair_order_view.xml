<odoo>
    <record id="view_repair_order_form_pending_stage" model="ir.ui.view">
        <field name="name">repair.order.form.pending.stage</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="mrp_repair.view_repair_order_form"/>
        <field name="arch" type="xml">

            <!-- Botón en la parte superior -->
            <xpath expr="//header/button[last()]" position="after">
                <button name="action_pending_part"
                        string="Pendiente de pieza"
                        type="object"
                        class="btn-warning"/>
            </xpath>

            <!-- Añadimos el estado al statusbar -->
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="widget">statusbar</attribute>
                <attribute name="statusbar_visible">
                    draft,confirmed,in_progress,pending_part,done,cancel
                </attribute>
            </xpath>

        </field>
    </record>
</odoo>
