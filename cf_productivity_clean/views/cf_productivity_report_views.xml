
<odoo>
  <data>
    <!-- Menús principales -->
    <menuitem id="menu_cf_clean_root" name="📊 CF Productividad" sequence="10"/>
    <menuitem id="menu_cf_clean_report" name="🧾 Informe" parent="menu_cf_clean_root" sequence="10"/>
    <menuitem id="menu_cf_clean_ranking" name="🏆 Ranking" parent="menu_cf_clean_root" sequence="20"/>
    <menuitem id="menu_cf_clean_stats" name="📈 Estadísticas" parent="menu_cf_clean_root" sequence="30"/>

    <!-- Report -->
    <record id="view_cf_clean_report_tree" model="ir.ui.view">
      <field name="name">cf.clean.report.tree</field>
      <field name="model">cf.clean.report</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="user_id"/>
          <field name="action_type"/>
          <field name="reason"/>
          <field name="date_time"/>
        </tree>
      </field>
    </record>

    <record id="view_cf_clean_report_form" model="ir.ui.view">
      <field name="name">cf.clean.report.form</field>
      <field name="model">cf.clean.report</field>
      <field name="arch" type="xml">
        <form string="Informe">
          <sheet>
            <group>
              <field name="name"/>
              <field name="user_id"/>
              <field name="action_type"/>
              <field name="reason"/>
              <field name="date_time"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="action_cf_clean_report" model="ir.actions.act_window">
      <field name="name">Informe</field>
      <field name="res_model">cf.clean.report</field>
      <field name="view_mode">tree,form,pivot,graph</field>
    </record>

    <menuitem id="menu_cf_clean_report_action" parent="menu_cf_clean_report" action="action_cf_clean_report"/>
  </data>
</odoo>
