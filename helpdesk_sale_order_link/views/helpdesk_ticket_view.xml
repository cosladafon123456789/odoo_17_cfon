<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_helpdesk_ticket_form_inherit_sale_link" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.sale.order.link</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group" position="after">
                <group string="Pedido Detectado">
                    <field name="linked_sale_order_id" options="{'no_create': True}"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
