<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_invoice_ocr_template_tree" model="ir.ui.view">
    <field name="name">invoice.ocr.template.tree</field>
    <field name="model">invoice.ocr.template</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="partner_id"/>
        <field name="priority"/>
        <field name="active"/>
      </tree>
    </field>
  </record>
  <record id="view_invoice_ocr_template_form" model="ir.ui.view">
    <field name="name">invoice.ocr.template.form</field>
    <field name="model">invoice.ocr.template</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="active"/>
            <field name="priority"/>
            <field name="partner_id"/>
            <field name="language"/>
            <field name="date_format"/>
          </group>
          <notebook>
            <page string="Cabecera">
              <group>
                <field name="regex_invoice_number"/>
                <field name="regex_date"/>
                <field name="regex_total"/>
                <field name="regex_currency"/>
                <field name="regex_vat"/>
                <field name="regex_due_date"/>
              </group>
            </page>
            <page string="LÃ­neas">
              <group>
                <field name="line_regex" colspan="4"/>
                <label string="Ayuda: cada regex debe devolver grupos (descripcion, cantidad, precio_unit, iva_pct opcional)" colspan="4"/>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
  <record id="action_invoice_ocr_template" model="ir.actions.act_window">
    <field name="name">Plantillas OCR (Gratis)</field>
    <field name="res_model">invoice.ocr.template</field>
    <field name="view_mode">tree,form</field>
  </record>
  <menuitem id="menu_invoice_ocr_root" name="OCR Gratis" parent="account.menu_finance_configuration" sequence="95"/>
  <menuitem id="menu_invoice_ocr_templates" name="Plantillas OCR (Gratis)" parent="menu_invoice_ocr_root" action="action_invoice_ocr_template"/>
</odoo>
