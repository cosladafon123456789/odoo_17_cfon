<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_custom_send_to" model="ir.ui.view">
        <field name="name">sale.order.form.custom.send.to</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_send_to_telemalaga"
                        type="object"
                        string="Enviar a TELEMALAGA"
                        class="btn btn-secondary"/>
                <button name="action_send_to_clinicphone"
                        type="object"
                        string="Enviar a CLINICPHONE"
                        class="btn btn-secondary"/>
            </xpath>
        </field>
    </record>
</odoo>
