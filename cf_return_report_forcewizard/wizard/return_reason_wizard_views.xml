<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_cf_return_reason_wizard_form" model="ir.ui.view">
        <field name="name">cf.return.reason.wizard.form</field>
        <field name="model">cf.return.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Motivo de devolución" create="false" edit="false">
                <group>
                    <field name="picking_id" invisible="1"/>
                    <field name="reason_id" options="{'no_create_edit': True}"/>
                    <field name="note" placeholder="Añade un detalle (opcional)"/>
                </group>
                <footer>
                    <button string="Confirmar y recibir" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
