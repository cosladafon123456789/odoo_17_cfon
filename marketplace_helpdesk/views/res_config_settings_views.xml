<odoo>
    <record id="view_marketplace_settings_form" model="ir.ui.view">
        <field name="name">marketplace.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="arch" type="xml">
            <form string="Configuración de Marketplaces">
                <sheet>
                    <group string="Conexión Mirakl">
                        <field name="marketplace_api_url" placeholder="https://mediamarktsaturn.mirakl.net/api/"/>
                        <field name="marketplace_api_key" password="True"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_marketplace_settings" model="ir.actions.act_window">
        <field name="name">Marketplaces</field>
        <field name="res_model">res.config.settings</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_marketplace_settings_form"/>
        <field name="target">inline</field>
    </record>

    <menuitem id="menu_marketplace_settings"
              name="Marketplaces"
              parent="base.menu_config"
              action="action_marketplace_settings"
              sequence="50"/>
</odoo>
