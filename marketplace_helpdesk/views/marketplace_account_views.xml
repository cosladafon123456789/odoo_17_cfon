<odoo>
    <record id="view_marketplace_account_tree" model="ir.ui.view">
        <field name="name">marketplace.account.tree</field>
        <field name="model">marketplace.account</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="marketplace"/>
                <field name="api_base"/>
                <field name="active"/>
                <field name="last_sync"/>
            </tree>
        </field>
    </record>

    <record id="view_marketplace_account_form" model="ir.ui.view">
        <field name="name">marketplace.account.form</field>
        <field name="model">marketplace.account</field>
        <field name="arch" type="xml">
            <form string="Cuenta de Marketplace">
                <sheet>
                    <group>
                        <group string="Credenciales">
                            <field name="name"/>
                            <field name="marketplace"/>
                            <field name="api_base"/>
                            <field name="api_key" password="True"/>
                            <field name="header_name"/>
                        </group>
                        <group string="Endpoints">
                            <field name="conv_list_endpoint"/>
                            <field name="conv_messages_endpoint"/>
                            <field name="conv_send_message_endpoint"/>
                            <field name="legacy_messages_list_endpoint"/>
                            <field name="legacy_messages_thread_endpoint"/>
                            <field name="legacy_send_message_endpoint"/>
                        </group>
                    </group>
                    <group>
                        <field name="last_sync" readonly="1"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_marketplace_accounts" model="ir.actions.act_window">
        <field name="name">Cuentas</field>
        <field name="res_model">marketplace.account</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
