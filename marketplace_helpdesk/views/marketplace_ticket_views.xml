<odoo>
    <record id="view_marketplace_ticket_search" model="ir.ui.view">
        <field name="name">marketplace.ticket.search</field>
        <field name="model">marketplace.ticket</field>
        <field name="arch" type="xml">
            <search string="Buscar tickets">
                <field name="name"/>
                <field name="customer_name"/>
                <field name="marketplace"/>
                <filter string="No leídos" name="unread" domain="[('message_needaction','=',True)]"/>
                <filter string="Todos" name="all" domain="[]"/>
            </search>
        </field>
    </record>

    <record id="view_marketplace_ticket_tree" model="ir.ui.view">
        <field name="name">marketplace.ticket.tree</field>
        <field name="model">marketplace.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="marketplace"/>
                <field name="customer_name"/>
                <field name="message_count"/>
                <field name="last_message_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_marketplace_ticket_form" model="ir.ui.view">
        <field name="name">marketplace.ticket.form</field>
        <field name="model">marketplace.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket de Marketplace">
                <header>
                    <button name="action_mark_in_progress" type="object" string="En proceso" class="btn-primary"/>
                    <button name="action_mark_closed" type="object" string="Cerrar" class="btn-secondary"/>
                    <button name="action_sync_messages" type="object" string="Sincronizar hilo" class="btn-secondary"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,in_progress,answered,closed"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="account_id"/>
                        <field name="marketplace"/>
                        <field name="customer_name"/>
                        <field name="customer_email"/>
                    </group>
                    <notebook>
                        <page string="Conversación">
                            <field name="message_ids" widget="mail_thread"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_marketplace_tickets" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="res_model">marketplace.ticket</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="view_marketplace_ticket_search"/>
    </record>
        <!-- Vista de búsqueda -->
    <record id="view_marketplace_ticket_search" model="ir.ui.view">
        <field name="name">marketplace.ticket.search</field>
        <field name="model">marketplace.ticket</field>
        <field name="arch" type="xml">
            <search string="Buscar Tickets">
                <field name="name" string="Asunto"/>
                <field name="customer_name" string="Cliente"/>
                <field name="marketplace" string="Marketplace"/>
                <filter string="Nuevos" name="filter_new" domain="[('state','=','new')]"/>
                <filter string="En progreso" name="filter_in_progress" domain="[('state','=','in_progress')]"/>
                <filter string="Cerrados" name="filter_closed" domain="[('state','=','closed')]"/>
                <group expand="0" string="Agrupar por...">
                    <filter string="Marketplace" context="{'group_by': 'marketplace'}"/>
                    <filter string="Estado" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
