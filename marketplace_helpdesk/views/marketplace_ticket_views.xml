<odoo>

    <!-- Lista -->
    <record id="view_marketplace_ticket_tree" model="ir.ui.view">
        <field name="name">marketplace.ticket.tree</field>
        <field name="model">marketplace.ticket</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="account_id"/>
                <field name="customer_name"/>
                <field name="state"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- Formulario -->
    <record id="view_marketplace_ticket_form" model="ir.ui.view">
        <field name="name">marketplace.ticket.form</field>
        <field name="model">marketplace.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket de Marketplace">
                <header>
                    <button name="action_mark_in_progress"
                            type="object"
                            string="En proceso"
                            class="btn-primary"
                            invisible="state not in ('new','answered')"/>
                    <button name="action_mark_closed"
                            type="object"
                            string="Cerrar"
                            class="btn-secondary"
                            invisible="state == 'closed'"/>
                    <button name="action_sync_messages"
                            type="object"
                            string="Sincronizar hilo"
                            class="btn-secondary"/>
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="new,in_progress,answered,closed"/>
                </header>

                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="account_id" options="{'no_create': False}"/>
                            <field name="external_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="customer_name"/>
                            <field name="customer_email"/>
                            <field name="last_external_update" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Conversación">
                            <field name="message_ids" widget="mail_thread"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban -->
    <record id="view_marketplace_ticket_kanban" model="ir.ui.view">
        <field name="name">marketplace.ticket.kanban</field>
        <field name="model">marketplace.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <field name="name"/>
                <field name="customer_name"/>
                <field name="account_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <t t-if="record.name">
                                <strong t-esc="record.name.value"/>
                            </t>
                            <t t-if="record.customer_name">
                                <div><span t-esc="record.customer_name.value"/></div>
                            </t>
                            <t t-if="record.account_id">
                                <div><span t-esc="record.account_id.value"/></div>
                            </t>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Acción -->
    <record id="action_marketplace_tickets" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="res_model">marketplace.ticket</field>
        <field name="view_mode">kanban,tree,form</field>
    </record>

</odoo>
