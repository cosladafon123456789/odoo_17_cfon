<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="view_picking_form_cfon_alert" model="ir.ui.view">
    <field name="name">stock.picking.form.cfon.return.banner.v11</field>
    <field name="model">stock.picking</field>
    <field name="inherit_id" ref="stock.view_picking_form"/>
    <field name="arch" type="xml">
      <!-- Safer insertion: place a subtle warning box at top of sheet -->
      <xpath expr="//sheet" position="inside">
        <div attrs="{'invisible': [('x_has_problem_lots','=',False)]}">
          <label string="⚠️ Este albarán incluye SN/Lotes con 2+ devoluciones previas. Revisa antes de validar."/>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
