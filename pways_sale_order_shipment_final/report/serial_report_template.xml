<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_imei_label_template">
            <t t-call="web.external_layout">
                <t t-set="doc" t-value="doc"/>
                <main>
                    <div class="page">
                        <h2 style="text-align:center;">IMEI / Serial Number</h2>
                        <br/>
                        <div style="display: flex; flex-wrap: wrap;">
                            <t t-foreach="docs" t-as="line">
                                <t t-if="line.imei_ids">
                                    <t t-foreach="line.imei_ids" t-as="imei">
                                        <div style="border: 1px solid #000; padding: 10px; width: 45%; margin: 5px;">
                                            <strong>Serial / IMEI:</strong>
                                            <div style="font-size: 18px;"><t t-esc="imei.name"/></div>
                                            <div>
                                                <img t-att-src="'/report/barcode/Code128/%s?width=250&amp;height=50&amp;humanreadable=0' % imei.name" alt="Barcode" style="margin-top:10px;"/>
                                            </div>
                                        </div>
                                    </t>
                                </t>
                            </t>
                        </div>
                    </div>
                </main>
            </t>
        </template>
