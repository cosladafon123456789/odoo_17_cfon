
<odoo>
    <record id="view_order_form_send_to" model="ir.ui.view">
        <field name="name">sale.order.form.send.to</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_send_to_wizard"
                        type="object"
                        string="Enviar a"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>
</odoo>
