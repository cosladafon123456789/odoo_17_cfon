
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_refund_reason_wizard" model="ir.ui.view">
        <field name="name">sale.order.refund.reason.wizard.form</field>
        <field name="model">sale.order.refund.reason.wizard</field>
        <field name="arch" type="xml">
            <form string="Motivo de Reembolso">
                <group>
                    <field name="reason_id" required="1"/>
                    <field name="reason_text"
                           attrs="{'invisible': [('reason_id', '!=', 'other')],
                                   'required': [('reason_id', '=', 'other')]}"/>
                </group>
                <footer>
                    <button string="Confirmar" type="object" name="action_confirm_reason" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
