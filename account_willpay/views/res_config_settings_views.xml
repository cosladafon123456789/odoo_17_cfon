<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.willpay</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="40"/>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//block[@id='default_accounts']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" >
                        <div class="o_setting_left_pane"></div>
                        <div class="o_setting_right_pane">
                            <div class="content-group">
                                <div>
                                    <span class="o_form_label">The following default accounts are used in willpay workflow.</span>
                                </div>
                                <div class="row mt8">
                                    <label for="willpay_journal_id" class="col-lg-4 o_light_label" />
                                    <field name="willpay_journal_id"/>
                                </div>
                                <div class="row mt8">
                                    <label for="willpay_account_bank_id" class="col-lg-4 o_light_label" />
                                    <field name="willpay_account_bank_id"/>
                                </div>
                                <div class="row mt8">
                                    <label for="willpay_account_partner_id" class="col-lg-4 o_light_label"/>
                                    <field name="willpay_account_partner_id"/>
                                </div>
                                <div class="row mt8">
                                    <label for="willpay_account_recieved_id" class="col-lg-4 o_light_label"/>
                                    <field name="willpay_account_recieved_id"/>
                                </div>

                                <div class="row mt8">
                                    <label for="willpay_account_collection_id" class="col-lg-4 o_light_label" />
                                    <field name="willpay_account_collection_id"/>
                                </div>
                                <div class="row mt8">
                                    <label for="willpay_account_discounted_id" class="col-lg-4 o_light_label"/>
                                    <field name="willpay_account_discounted_id"/>
                                </div>
                                <div class="row mt8">
                                    <label for="willpay_account_unpaid_id" class="col-lg-4 o_light_label"/>
                                    <field name="willpay_account_unpaid_id"/>
                                </div>
                                <div class="row mt8">
                                    <label for="willpay_account_debit_discount_id" class="col-lg-4 o_light_label" />
                                    <field name="willpay_account_debit_discount_id"/>
                                </div>
                                <div class="row mt8">
                                    <label for="willpay_account_interests_id" class="col-lg-4 o_light_label" />
                                    <field name="willpay_account_interests_id" />
                                </div>
                                <div class="row mt8">
                                    <label for="willpay_account_management_fee_id" class="col-lg-4 o_light_label"/>
                                    <field name="willpay_account_management_fee_id"/>
                                </div>

                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
