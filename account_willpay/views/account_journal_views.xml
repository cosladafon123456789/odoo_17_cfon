<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_account_journal_form" model="ir.ui.view">
        <field name="name">account.journal.inherit.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form" />
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="is_discount_line" invisible="type != 'bank'" />
            </xpath>
            <xpath expr="//page[@name='bank_account']" position="inside">
                <group invisible="is_discount_line != True" >
                    <group string="Willpay Information">
                        <field name="willpay_journal_id" />
                        <field name="willpay_account_partner_id" />
                        <field name="willpay_account_recieved_id" />
                        <field name="willpay_account_collection_id" />
                        <field name="willpay_account_discounted_id" />
                        <field name="willpay_account_unpaid_id" />
                        <field name="willpay_account_interests_id" />
                        <field name="willpay_account_management_fee_id" />
                    </group>
                    <group></group>
                </group>
            </xpath>
        </field>
    </record>

</odoo>