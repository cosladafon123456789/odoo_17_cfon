<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_account_make_willpay" model="ir.ui.view">
            <field name="name">Account Willpays</field>
            <field name="model">account.make.willpay</field>
            <field name="arch" type="xml">
                <form string="Account Willpays">
                    <p class="oe_grey">
                        Willpays will be created in recieved so that you can review
                        them before validation.
                    </p>
                    <group>
                        <group>
                            <field name="bank_id" required="1" />
                            <field name="amount" />
                            <field name="currency_id" invisible="1" />
                        </group>
                        <group>
                            <field name="date" />
                            <field name="due_date" />
                        </group>
                    </group>
                    <footer>
                        <button name="create_willpays" string="Create and View Willpays" type="object"
                            context="{'open_willpays': True}" class="btn-primary" />
                        <button name="create_willpays" string="Create Willpays" type="object" />
                        <button string="Cancel" class="btn-secondary" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_server_account_make_willpay" model="ir.actions.server" >
            <field name="name">Create willpays</field>
            <field name="model_id" ref="account_willpay.model_account_make_willpay" />
            <field name="binding_model_id" ref="account.model_account_move" />
            <field name="state">code</field>
            <field name="code">action = model.action_open_wizard()</field>
        </record>

</odoo>
