<odoo>
    <!-- Vista formulario del número de serie/lote -->
    <record id="view_stock_lot_form_bat100" model="ir.ui.view">
        <field name="name">stock.lot.form.bat100</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="bat100"/>
            </xpath>
        </field>
    </record>

    <!-- Vista lista de lotes/series -->
    <record id="view_stock_lot_tree_bat100" model="ir.ui.view">
        <field name="name">stock.lot.tree.bat100</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="bat100" widget="boolean_toggle"/>
            </xpath>
        </field>
    </record>

    <!-- Vista de búsqueda (filtro BAT100) -->
    <record id="view_stock_lot_search_bat100" model="ir.ui.view">
        <field name="name">stock.lot.search.bat100</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='serial']" position="after">
                <filter name="bat100_true" string="BAT100" domain="[('bat100','=',True)]"/>
            </xpath>
        </field>
    </record>
</odoo>
