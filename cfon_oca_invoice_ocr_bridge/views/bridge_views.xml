
<odoo>
    <record id="view_cfon_ocr_import_wizard_form" model="ir.ui.view">
        <field name="name">cfon.ocr.import.wizard.form</field>
        <field name="model">cfon.ocr.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Importar facturas con OCR (OCA Bridge)">
                <group>
                    <field name="create_partner_if_missing"/>
                </group>
                <separator string="Añade aquí tus archivos (PDF/JPG/PNG)"/>
                <field name="file_ids" widget="one2many_list">
                    <tree editable="bottom">
                        <field name="name"/>
                        <field name="data" filename="name"/>
                    </tree>
                </field>
                <group>
                    <field name="result_move_ids" widget="many2many_tags" readonly="1"/>
                </group>
                <footer>
                    <button string="Importar" name="action_import" type="object" class="btn-primary"/>
                    <button string="Cerrar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_cfon_ocr_import_wizard" model="ir.actions.act_window">
        <field name="name">Importar facturas (OCR / OCA)</field>
        <field name="res_model">cfon.ocr.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_cfon_ocr_import_root" name="Importador OCR (OCA)" parent="account.menu_finance" sequence="96"/>
    <menuitem id="menu_cfon_ocr_import_wizard" name="Importar facturas (OCR / OCA)" parent="menu_cfon_ocr_import_root" action="action_cfon_ocr_import_wizard" sequence="1"/>
</odoo>
