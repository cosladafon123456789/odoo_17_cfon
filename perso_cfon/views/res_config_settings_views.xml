<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_settings_view_form_inherit_gap" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.account.gap</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <!-- GAP V1 -->
                <xpath expr="//setting[@id='default_taxes']" position="after">
                    <setting id="rebu_journal" string="Journal for REBU entries" company_dependent="1" help="Journal for REBU operations">
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="rebu_journal_id" class="col-lg-3 o_light_label"/>
                                <field name="rebu_journal_id" options="{'no_create_edit': True, 'no_open': True}" context="{'active_test': False}"/>
                            </div>
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
