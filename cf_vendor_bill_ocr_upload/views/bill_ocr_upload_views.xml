<odoo>
  <record id="view_bill_ocr_upload_wizard" model="ir.ui.view">
    <field name="name">bill.ocr.upload.wizard.form</field>
    <field name="model">bill.ocr.upload.wizard</field>
    <field name="arch" type="xml">
      <form string="Subir con OCR">
        <group>
          <field name="attachment_ids" widget="many2many_binary" class="oe_inline"/>
          <field name="journal_id" options="{'no_create': True}"/>
          <field name="partner_id"/>
          <field name="set_due_from_text"/>
          <field name="create_one_line_if_no_items"/>
        </group>
        <footer>
          <button string="Procesar" type="object" name="action_process" class="btn-primary"/>
          <button string="Cancelar" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>

  <record id="action_bill_ocr_upload_wizard" model="ir.actions.act_window">
    <field name="name">Subir con OCR</field>
    <field name="res_model">bill.ocr.upload.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="context">{'default_journal_id': active_id}</field>
  </record>

  <!-- Extra: menÃº en Contabilidad > Proveedores > Facturas -->
  <menuitem id="menu_bill_ocr_upload_root" name="Subir con OCR" parent="account.menu_finance_entries"/>
</odoo>
