<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Tipo de operación -->
    <record id="picking_type_clinicphone_clientes" model="stock.picking.type">
        <field name="name">ClinicPhone Clientes</field>
        <field name="sequence_code">CLINIC</field>
        <field name="code">internal</field>
        <field name="warehouse_id" eval="False"/>
        <field name="default_location_src_id" ref="stock.stock_location_stock"/>
        <field name="default_location_dest_id" eval="96"/>
    </record>

    <!-- Acción personalizada -->
    <record id="action_clinicphone_filtered" model="ir.actions.act_window">
        <field name="name">Traslados a ClinicPhone</field>
        <field name="res_model">stock.picking</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('picking_type_id', '=', ref('picking_type_clinicphone_clientes')), ('location_dest_id', '=', 96)]</field>
    </record>

    <!-- Menú directo -->
    <menuitem id="menu_clinicphone_filtered_root"
              name="ClinicPhone Filtrado"
              parent="stock.menu_stock_root"
              action="action_clinicphone_filtered"
              sequence="30"/>
</odoo>
