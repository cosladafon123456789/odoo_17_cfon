<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="lot_repair_order_wizard_form" model="ir.ui.view">
			<field name="name">lot.repair.order.wizard.form</field>
			<field name="model">lot.repair.order.wizard</field>
			<field name="arch" type="xml">
				<form string="Create Repair Order">
					<group>
						<group>
							<field name="action_type" readonly="1"/>
							<field name="picking_id" options="{'no_create': True}" invisible="action_type != 'rma'"/>
						</group>
						<group>
							<field name="location_id" options="{'no_create': True}" invisible="action_type != 'repair'"/>
							<field name="avl_quantity" force_save="1" readonly="1"/>						
							<field name="delivery_ids" widget="many2many_tags" readonly="1" invisible="1"/>
							<!-- <field name="location_ids" widget="many2many_tags" readonly="1" invisible="1"/> -->
							<field name="quantity"/>
						</group>
					</group>
					<footer>
						<button name="action_rma"
                                string="Create"
                                type="object"
                                invisible="action_type != 'rma'"
                                class="btn-primary"/>
						<button name="action_create_lot"
								string="Create"
								type="object"
								invisible="action_type != 'repair'"
								class="oe_highlight"/>
						<button string="Cancel" class="oe_link" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="create_lot_repair_order_action" model="ir.actions.act_window">
			<field name="name">Create Repair Order</field>
			<field name="res_model">lot.repair.order.wizard</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
	</data>
</odoo>
