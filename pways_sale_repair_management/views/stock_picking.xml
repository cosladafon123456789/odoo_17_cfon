    <record id="inherit_repair_order_form" model="ir.ui.view">
        <field name="name">repair.order.form</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='picking_id']" position="before">
                  <field name="sale_order_line_id"/>
            </xpath>

            <xpath expr="//button[@name='action_view_sale_order']" position="before">
                <button name="button_view_picking"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-truck">
