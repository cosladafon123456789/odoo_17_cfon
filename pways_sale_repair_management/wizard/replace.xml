<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="replace_order_wizard_form" model="ir.ui.view">
            <field name="name">replace.order.wizard.form</field>
            <field name="model">replace.order.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Replace Order">
                    <group>
                        <group>
                            <field name="dest_location_id"/>
                        </group>
                        <notebook>
                            <page string="Products">
                                <field name="line_ids">
                                    <tree editable="top" create="false" delete="false">
                                        <field name="product_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                    <footer>
                        <button name="action_replace_order" string="Create Replace" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="create_replace_order_action" model="ir.actions.act_window">
            <field name="name">Create Replace Order</field>
            <field name="res_model">replace.order.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        
    </data>


    <data>

        <record id="return_order_wizard_form" model="ir.ui.view">
            <field name="name">return.order.wizard.form</field>
            <field name="model">return.order.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Return Order">
                    <group>
                        <group>
                            <field name="dest_location_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_return_order" string="Create Return" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="pways_create_return_order_action" model="ir.actions.act_window">
            <field name="name">Create Return Order</field>
            <field name="res_model">return.order.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>

</odoo>