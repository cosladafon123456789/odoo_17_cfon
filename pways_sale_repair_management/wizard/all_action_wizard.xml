<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="repair_action_wizard_form" model="ir.ui.view">
            <field name="name">repair.action.wizard.form</field>
            <field name="model">repair.action.wizard</field>
            <field name="arch" type="xml">
                <form string="Repair Action Wizard">
                    <group>
                        <group>
                            <field name="action_type" readonly="1"/>                            
                        </group>
                        <group>
                            <field name="default_location_id" string="Return Location" invisible="action_type != 'refund'"/>
                            <field name="default_location_id" string="Replace Location" invisible="action_type != 'replace'"/>
                            <field name="order_id" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Products">
                                <field name="line_ids">
                                    <tree editable="top" create="false">
                                        <field name="product_id"/>
                                        <field name="lot_id"/>
                                        <field name="vendor_ids" widget="many2many_tags" readonly="1" column_invisible="1"/>
                                        <field name="vendor_id" options="{'no_create': True}"/>
                                        <field name="quantity"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Replace Products" invisible="action_type != 'replace'">
                                <field name="replace_line_ids">
                                    <tree editable="bottom">
                                        <field name="product_id"/>
                                        <field name="quantity"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </group>
                    <footer>
                        <button name="action_rma"
                                string="RMA"
                                type="object"
                                invisible="action_type != 'rma'"
                                class="btn-primary"/>

                        <button name="action_return_to_customer"
                                string="Return to Customer"
                                type="object"
                                invisible="action_type != 'return_to_customer'"
                                class="btn-primary"/>

                        <button name="action_return_order"
                                string="Create Return"
                                type="object"
                                invisible="action_type != 'refund'"
                                class="oe_highlight"/>

                        <button name="action_replace"
                                string="Create Replace"
                                type="object"
                                invisible="action_type != 'replace'"
                                class="oe_highlight"/>

                         <button name="action_exclusive_return"
                                string="Exclusive Return"
                                type="object"
                                invisible="action_type != 'exclusive'"
                                class="oe_highlight"/>

                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_repair_action_wizard" model="ir.actions.act_window">
            <field name="name">Repair Action</field>
            <field name="res_model">repair.action.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>

</odoo>