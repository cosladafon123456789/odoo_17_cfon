    <record id="inherit_view_sale_order_tree_order" model="ir.ui.view">
        <field name="name">sale.order.tree.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_status']" position="after">
                <field name="repair_status"
                    decoration-success="repair_status == 'replace'"
                    decoration-info="repair_status == 'received'"
                    decoration-primary="repair_status == 'rma'"
                    decoration-warning="repair_status == 'return_to_customer'"
                    decoration-danger="repair_status == 'refund'"
                    widget="badge"/>
            </xpath>
        </field>
    </record>


</odoo>
