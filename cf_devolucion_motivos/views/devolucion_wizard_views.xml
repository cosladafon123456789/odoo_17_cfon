<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_devolucion_wizard_form" model="ir.ui.view">
        <field name="name">cf.devolucion.wizard.form</field>
        <field name="model">cf.devolucion.wizard</field>
        <field name="arch" type="xml">
            <form string="Registrar motivo de devolución">
                <group>
                    <field name="sale_order_id" invisible="1"/>
                    <field name="motivo" required="1"/>
                    <field name="tipo_error" required="1"/>
                    <field name="detalle" placeholder="Describe el defecto, accesorio faltante u otro detalle relevante..."/>
                </group>
                <footer>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    <button string="Confirmar y continuar" type="object" name="action_confirm" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_devolucion_wizard" model="ir.actions.act_window">
        <field name="name">Motivo de devolución</field>
        <field name="res_model">cf.devolucion.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_devolucion_wizard_form"/>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>
</odoo>