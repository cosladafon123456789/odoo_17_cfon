<odoo>
    <record id="view_order_form_inherit_helpdesk" model="ir.ui.view">
        <field name="name">sale.order.form.helpdesk.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//div[@name='button_box']" position="inside">
                <button name="action_view_helpdesk_tickets"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-ticket"
                        attrs="{'invisible': [('helpdesk_ticket_count', '=', 0)]}">
                    <field name="helpdesk_ticket_count"
                           widget="statinfo"
                           string="Tickets Helpdesk"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
