<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_custom_send_to_button" model="ir.ui.view">
        <field name="name">sale.order.form.custom.send.to.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_open_send_to_wizard"
                        type="object"
                        string="Enviar a"
                        class="btn btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>
