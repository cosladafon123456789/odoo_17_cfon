
<odoo>
    <record id="view_order_form_send_to_location" model="ir.ui.view">
        <field name="name">sale.order.form.send.to.location</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_send_to_location_wizard)d"
                        type="action"
                        string="Enviar a"
                        class="oe_highlight"
                        context="{'default_sale_order_id': active_id}"/>
            </xpath>
        </field>
    </record>
</odoo>
