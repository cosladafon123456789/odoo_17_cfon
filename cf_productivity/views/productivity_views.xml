<odoo>
    <record id="view_productivity_log_tree" model="ir.ui.view">
        <field name="name">productivity.log.tree</field>
        <field name="model">productivity.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="user_id"/>
                <field name="type"/>
                <field name="duration"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="view_productivity_log_form" model="ir.ui.view">
        <field name="name">productivity.log.form</field>
        <field name="model">productivity.log</field>
        <field name="arch" type="xml">
            <form string="Registro de productividad">
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="user_id"/>
                        <field name="type"/>
                        <field name="duration"/>
                        <field name="name"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
