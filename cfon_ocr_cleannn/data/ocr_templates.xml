<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="tpl_endesa" model="invoice.ocr.template">
    <field name="name">Endesa Energía (ES)</field>
    <field name="priority">1</field>
    <field name="language">spa</field>
    <field name="date_format">%d/%m/%Y</field>
    <field name="regex_invoice_number">(?i)(?:n[ºo]\s*de\s*factura|factura)\s*[:\-]?\s*([A-Z0-9\-\/\.]+)</field>
    <field name="regex_date">(?i)(?:fecha\s*de\s*emisi[óo]n|fecha)\s*[:\-]?\s*(\d{2}/\d{2}/\d{4})</field>
    <field name="regex_total">(?i)(?:total\s*factura|importe\s*total|total\s*a\s*pagar)\s*[:\-]?\s*([\d\.,]+)</field>
    <field name="regex_currency">(?i)\b(EUR|USD|GBP)\b|([€$£])</field>
    <field name="regex_vat">(?i)\b(B\d{7}[A-Z0-9])\b</field>
    <field name="regex_due_date">(?i)(?:fecha\s*de\s*vencimiento|vencimiento)\s*[:\-]?\s*(\d{2}/\d{2}/\d{4})</field>
  </record>

  <record id="tpl_correos" model="invoice.ocr.template">
    <field name="name">Correos / Paquetería (ES)</field>
    <field name="priority">2</field>
    <field name="language">spa</field>
    <field name="date_format">%d/%m/%Y</field>
    <field name="regex_invoice_number">(?i)(?:factura|invoice)\s*[:\-]?\s*([A-Z0-9\-\/\.]+)</field>
    <field name="regex_date">(?i)(?:fecha|date)\s*[:\-]?\s*(\d{2}/\d{2}/\d{4})</field>
    <field name="regex_total">(?i)(?:importe\s*total|total\s*invoice|total)\s*[:\-]?\s*([\d\.,]+)</field>
    <field name="regex_currency">(?i)\b(EUR|USD|GBP)\b|([€$£])</field>
  </record>

  <record id="tpl_fedex" model="invoice.ocr.template">
    <field name="name">FedEx (EU)</field>
    <field name="priority">3</field>
    <field name="language">eng</field>
    <field name="date_format">%d/%m/%Y</field>
    <field name="regex_invoice_number">(?i)(?:invoice\s*no\.?|invoice\s*number)\s*[:\-]?\s*([A-Z0-9\-\/\.]+)</field>
    <field name="regex_date">(?i)(?:invoice\s*date|date)\s*[:\-]?\s*(\d{2}/\d{2}/\d{4}|\d{4}-\d{2}-\d{2})</field>
    <field name="regex_total">(?i)(?:total\s*amount|total\s*due|amount\s*due)\s*[:\-]?\s*([\d\.,]+)</field>
    <field name="regex_currency">(?i)\b(EUR|USD|GBP)\b|([€$£])</field>
  </record>

  <record id="tpl_movistar" model="invoice.ocr.template">
    <field name="name">Telefónica Movistar (ES)</field>
    <field name="priority">4</field>
    <field name="language">spa</field>
    <field name="date_format">%d/%m/%Y</field>
    <field name="regex_invoice_number">(?i)(?:n[ºo]\s*de\s*factura|factura)\s*[:\-]?\s*([A-Z0-9\-\/\.]+)</field>
    <field name="regex_date">(?i)(?:fecha\s*de\s*emisi[óo]n|fecha)\s*[:\-]?\s*(\d{2}/\d{2}/\d{4})</field>
    <field name="regex_total">(?i)(?:total\s*factura|importe\s*total|total\s*a\s*pagar)\s*[:\-]?\s*([\d\.,]+)</field>
    <field name="regex_currency">(?i)\b(EUR|USD|GBP)\b|([€$£])</field>
  </record>
</odoo>
