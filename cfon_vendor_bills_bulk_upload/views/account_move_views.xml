<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Smart button on vendor bill form -->
    <record id="view_move_form_inherit_cfon_upload" model="ir.ui.view">
        <field name="name">account.move.form.cfon.upload.button</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="%(action_account_vendor_bill_upload_wizard)d"
                        string="Subir facturas"
                        type="action"
                        class="btn-secondary"/>
            </xpath>
        </field>
    </record>
</odoo>
