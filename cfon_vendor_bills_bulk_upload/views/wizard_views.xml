<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_vendor_bill_upload_wizard_form" model="ir.ui.view">
        <field name="name">account.vendor.bill.upload.wizard.form</field>
        <field name="model">account.vendor.bill.upload.wizard</field>
        <field name="arch" type="xml">
            <form string="Subir facturas proveedor (PDF)">
                <group>
                    <group>
                        <field name="company_id"/>
                        <field name="journal_id" required="1"/>
                        <field name="invoice_date"/>
                        <field name="default_partner_id" placeholder="(Opcional)"/>
                        <field name="set_filename_in_ref"/>
                    </group>
                    <group>
                        <field name="upload_files" widget="many2many_binary" filename="name" options="{{'no_create_edit': True}}" required="1"/>
                        <label string="Arrastra aquÃ­ los PDF o pulsa para seleccionar." for="upload_files"/>
                    </group>
                </group>
                <footer>
                    <button string="Crear borradores" type="object" name="action_create_bills" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_account_vendor_bill_upload_wizard" model="ir.actions.act_window">
        <field name="name">Subir facturas (PDF)</field>
        <field name="res_model">account.vendor.bill.upload.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{{'default_company_id': company_id}}</field>
    </record>
</odoo>
