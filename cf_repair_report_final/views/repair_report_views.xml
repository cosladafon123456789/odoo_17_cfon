
<odoo>
    <record id="view_repair_report_tree_final" model="ir.ui.view">
        <field name="name">repair.report.tree.final</field>
        <field name="model">repair.report</field>
        <field name="arch" type="xml">
            <tree string="Informe de Reparaciones" default_order="create_date desc">
                <field name="technician_id"/>
                <field name="repair_id"/>
                <field name="create_date"/>
                <field name="reason"/>
            </tree>
        </field>
    </record>

    <record id="view_repair_report_graph_final" model="ir.ui.view">
        <field name="name">repair.report.graph.final</field>
        <field name="model">repair.report</field>
        <field name="arch" type="xml">
            <graph string="Reparaciones por TÃ©cnico" type="bar">
                <field name="technician_id" type="row"/>
                <field name="repair_id" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_repair_report_search_final" model="ir.ui.view">
        <field name="name">repair.report.search.final</field>
        <field name="model">repair.report</field>
        <field name="arch" type="xml">
            <search string="Buscar Informe">
                <field name="technician_id"/>
                <filter name="today" string="Hoy" domain="[('create_date','&gt;=', context_today())]"/>
            </search>
        </field>
    </record>
</odoo>
