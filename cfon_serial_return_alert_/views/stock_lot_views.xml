
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Inherit lot form to show return stats -->
    <record id="view_stock_lot_form_cfon_alert" model="ir.ui.view">
        <field name="name">stock.lot.form.cfon.return.alert</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_stock_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Devoluciones">
                    <group>
                        <field name="x_return_count" readonly="1"/>
                        <field name="x_on_hand_qty" readonly="1"/>
                        <field name="x_return_alert" readonly="1"/>
                    </group>
                    <label string="Este lote se marca en alerta si el número de devoluciones es 2 o más."/>
                </page>
            </xpath>
            <xpath expr="//sheet" position="inside">
                <div attrs="{'invisible': [('x_return_alert','=',False)]}" class="oe_title">
                    <div class="alert alert-danger" role="alert">
                        ⚠️ Atención: este número de serie/lote ha sido devuelto 2 o más veces.
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <!-- Action & Menu: Lots with >=2 returns and in stock -->
    <record id="action_lots_2plus_returns" model="ir.actions.act_window">
        <field name="name">SN/Lotes +2 devoluciones en stock</field>
        <field name="res_model">stock.lot</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('x_return_count','>=',2), ('x_on_hand_qty','&gt;',0)]</field>
        <field name="context">{'search_default_filter_2plus': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay números de serie/lotes con 2+ devoluciones y stock interno.
            </p>
        </field>
    </record>

    <menuitem id="menu_lots_2plus_returns"
              name="SN/Lotes en stock +2 dev"
              parent="stock.menu_traceability"
              action="action_lots_2plus_returns"
              sequence="25"/>
</odoo>
