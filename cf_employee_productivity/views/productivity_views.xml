<odoo>
    <record id="view_employee_productivity_log_tree" model="ir.ui.view">
        <field name="name">employee.productivity.log.tree</field>
        <field name="model">employee.productivity.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="user_id"/>
                <field name="task_type"/>
                <field name="points"/>
            </tree>
        </field>
    </record>

    <record id="view_employee_productivity_log_graph" model="ir.ui.view">
        <field name="name">employee.productivity.log.graph</field>
        <field name="model">employee.productivity.log</field>
        <field name="arch" type="xml">
            <graph string="Productividad" type="bar">
                <field name="user_id" type="row"/>
                <field name="points" type="measure"/>
            </graph>
        </field>
    </record>

    <menuitem id="menu_cf_productivity_root" name="Productividad" sequence="50"/>
    <record id="action_employee_productivity_log" model="ir.actions.act_window">
        <field name="name">Registros de Productividad</field>
        <field name="res_model">employee.productivity.log</field>
        <field name="view_mode">tree,graph</field>
    </record>
    <menuitem id="menu_cf_productivity_logs" name="Registros" parent="menu_cf_productivity_root" action="action_employee_productivity_log"/>
</odoo>
