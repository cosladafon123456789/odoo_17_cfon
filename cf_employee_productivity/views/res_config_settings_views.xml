<odoo>
    <record id="view_res_config_settings_productivity" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.cf.productivity</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.view_res_config_settings"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='settings']" position="inside">
                <div class="app-settings-block" data-string="Productividad" string="Productividad">
                    <h2>Productividad</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6">
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="picking_user_ids" widget="many2many_tags"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="picking_user_ids"/>
                                    <div class="text-muted">Usuarios de pedidos a contabilizar (validación de entregas)</div>
                                </div>
                            </div>
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="repair_user_ids" widget="many2many_tags"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="repair_user_ids"/>
                                    <div class="text-muted">Usuarios técnicos a contabilizar (reparaciones finalizadas)</div>
                                </div>
                            </div>
                            <div class="o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="helpdesk_user_ids" widget="many2many_tags"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="helpdesk_user_ids"/>
                                    <div class="text-muted">Usuarios de postventa a contabilizar (respuestas públicas en tickets)</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
