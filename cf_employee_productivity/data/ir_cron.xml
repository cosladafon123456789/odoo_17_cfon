<odoo>
    <!-- =============================== -->
    <!-- CRON: Envío diario de resúmenes -->
    <!-- =============================== -->
    <record id="ir_cron_cf_employee_productivity_daily_mail" model="ir.cron">
        <field name="name">CF Productividad - Envío diario</field>
        <field name="model_id" ref="model_employee_productivity_log"/>
        <field name="state">code</field>
        <field name="code">model.cron_send_daily_summary()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>

        <!-- ✅ 100 % compatible con Odoo 17 -->
        <!-- Fija el primer disparo hoy a las 20:00 locales -->
        <field name="nextcall" eval="(fields.Datetime.now() + relativedelta(hours=20 - fields.Datetime.now().hour, minutes=-fields.Datetime.now().minute, seconds=-fields.Datetime.now().second))"/>
    </record>
</odoo>
