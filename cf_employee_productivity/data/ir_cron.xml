<odoo>
    <!-- =============================== -->
    <!-- CRON: Envío diario de resumenes -->
    <!-- =============================== -->
    <record id="ir_cron_cf_employee_productivity_daily_mail" model="ir.cron">
        <field name="name">CF Productividad - Envío diario</field>
        <field name="model_id" ref="model_employee_productivity_log"/>
        <field name="state">code</field>
        <field name="code">model.cron_send_daily_summary()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <!-- ✅ Fecha/hora correcta sin strftime ni doble namespace -->
        <field name="nextcall" eval="(datetime.now() + datetime.timedelta(hours=2)).replace(minute=0, second=0, microsecond=0)"/>
    </record>
</odoo>
