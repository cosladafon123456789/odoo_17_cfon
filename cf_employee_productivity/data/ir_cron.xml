<odoo>
    <record id="ir_cron_cf_employee_productivity_daily_mail" model="ir.cron">
        <field name="name">CF Productividad - Envío diario</field>
        <field name="model_id" ref="model_employee_productivity_log"/>
        <field name="state">code</field>
        <field name="code">model.cron_send_daily_summary()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>

        <!-- ✅ 100 % compatible con safe_eval -->
        <!-- Programa el cron para hoy a las 20:00 -->
        <field name="nextcall" eval="datetime.combine(datetime.today(), datetime.time(20, 0, 0))"/>
    </record>
</odoo>
