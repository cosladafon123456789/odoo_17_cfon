<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="repair_order_wizard_form" model="ir.ui.view">
            <field name="name">repair.order.wizard.form</field>
            <field name="model">repair.order.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Repair Order">
                    <group>
                        <group>
                            <field name="description_1"/>
                        </group>
                        <group>
                            <field name="description_2"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_print_wizard" string="Create" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="create_repair_order_action" model="ir.actions.act_window">
            <field name="name">Create Repair Order</field>
            <field name="res_model">repair.order.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
