<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_hr_visa_designation_list" model="ir.ui.view">
        <field name="name">hr.visa.designation.list</field>
        <field name="model">hr.visa.designation</field>
        <field name="arch" type="xml">
            <list string="Visa Designation">
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_hr_visa_designation_form" model="ir.ui.view">
        <field name="name">hr.visa.designation.form</field>
        <field name="model">hr.visa.designation</field>
        <field name="arch" type="xml">
            <form string="Job Category">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_visa_designation" model="ir.actions.act_window">
        <field name="name">Visa Designation</field>
        <field name="res_model">hr.visa.designation</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" eval="False"/>
    </record>

    <menuitem id="menu_hr_visa_designation"
              name="Visa Designation"
              parent="hr.menu_human_resources_configuration"
              action="action_hr_visa_designation"
              sequence="3"/>

</odoo>
