<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_hr_hfm_department_list" model="ir.ui.view">
        <field name="name">hr.hfm.department.list</field>
        <field name="model">hr.hfm.department</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_hr_hfm_department_form" model="ir.ui.view">
        <field name="name">hr.hfm.department.form</field>
        <field name="model">hr.hfm.department</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_hfm_department" model="ir.actions.act_window">
        <field name="name">HFM Departments</field>
        <field name="res_model">hr.hfm.department</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create the first HFM Department</p>
        </field>
    </record>

    <menuitem id="menu_hr_hfm_department"
              name="HFM Departments"
              parent="hr.menu_human_resources_configuration"
              action="action_hr_hfm_department"
              sequence="9"/>

</odoo>
