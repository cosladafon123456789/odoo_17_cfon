<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Añade el botón de importación al encabezado del formulario de picking -->
    <record id="view_picking_form_serial_import" model="ir.ui.view">
        <field name="name">stock.picking.form.serial.import.button</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header" position="inside">
                <button
                    name="action_open_serial_import_wizard"
                    string="Importar números de serie"
                    type="object"
                    class="btn-primary oe_highlight"
                    invisible="state in ['done','cancel']"
                />
            </xpath>
        </field>
    </record>
</odoo>
