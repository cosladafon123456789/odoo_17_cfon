<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_history_wizard_view" model="ir.ui.view">
            <field name="name">product.history.tree</field>
            <field name="model">product.history</field>
            <field name="arch" type="xml">
                <form>
                    <field name="purchase_history_ids"  mode="tree">
                        <tree string="History">
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="product_qty"/>
                            <field name="price_unit"/>
                        </tree>
                    </field>
                </form>
            </field>
        </record>

        <record id="product_history_wizard" model="ir.actions.act_window">
            <field name="name">Product History</field>
            <field name="res_model">product.history</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="pways_purchase_history.product_history_wizard_view"/>
        </record>
    </data>
</odoo>
  