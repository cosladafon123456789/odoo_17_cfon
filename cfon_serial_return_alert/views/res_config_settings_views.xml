
<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_res_config_settings_cfon_return_alerts" model="ir.ui.view">
    <field name="name">res.config.settings.cfon.return.alerts</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="base.view_res_config_settings"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@id='settings']" position="inside">
        <div class="app_settings_block" data-string="Serial Return Alerts" string="Serial Return Alerts">
          <h2>Serial Return Alerts</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                <field name="return_alert_threshold" class="oe_inline"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="return_alert_threshold"/>
                <div class="text-muted">Number of customer returns for the same serial/lot before alert.</div>
              </div>
            </div>
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                <field name="return_alert_responsible_id" options="{'no_create_edit': True}"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="return_alert_responsible_id"/>
                <div class="text-muted">Responsible user for activities (optional).</div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>
