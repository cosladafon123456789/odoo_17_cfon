
<odoo>
    <record id="view_picking_form_inherit_return_alert" model="ir.ui.view">
        <field name="name">stock.picking.form.return.alert</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <field name="has_many_return_serials" invisible="1"/>
                <widget name="web_ribbon"
                        title="¡Atención! Hay Nº de serie con 2+ devoluciones"
                        attrs="{'invisible': [('has_many_return_serials','=',False)]}"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button type="object"
                        name="action_open_many_return_lots"
                        string="Nº serie 2+ devoluciones"
                        class="oe_stat_button"
                        attrs="{'invisible': [('many_return_lot_count','=',0)]}">
                    <field name="many_return_lot_count" widget="statinfo"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
