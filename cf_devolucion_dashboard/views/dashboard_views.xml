<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_cf_devolucion_dashboard_form" model="ir.ui.view">
        <field name="name">cf.devolucion.dashboard.form</field>
        <field name="model">cf.devolucion.dashboard</field>
        <field name="arch" type="xml">
            <form string="Dashboard de devoluciones">
                <sheet>
                    <group>
                        <group>
                            <field name="fecha_desde"/>
                        </group>
                        <group>
                            <field name="fecha_hasta"/>
                        </group>
                    </group>
                    <separator string="Indicadores"/>
                    <group>
                        <group>
                            <field name="total_devoluciones" widget="statinfo" options="{'display': 'large'}"/>
                            <field name="pct_sobre_ventas" widget="statinfo" options="{'display': 'large', 'suffix': '%'}"/>
                        </group>
                        <group>
                            <field name="internos" widget="statinfo" options="{'display': 'large'}"/>
                            <field name="externos" widget="statinfo" options="{'display': 'large'}"/>
                        </group>
                        <group>
                            <field name="media_dias" widget="statinfo" options="{'display': 'large'}"/>
                        </group>
                    </group>
                    <separator string="Gráficos rápidos"/>
                    <group>
                        <button name="%(action_cf_dev_graph_motivos)d" string="Barras: Motivos" type="action" class="btn-primary"/>
                        <button name="%(action_cf_dev_graph_tipo_error)d" string="Pastel: Interno/Externo" type="action" class="btn-secondary"/>
                        <button name="%(action_cf_dev_graph_mes)d" string="Líneas: Evolución mensual" type="action" class="btn-secondary"/>
                        <button name="%(action_cf_dev_pivot)d" string="Pivot completo" type="action" class="btn-secondary"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cf_devolucion_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard de devoluciones</field>
        <field name="res_model">cf.devolucion.dashboard</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="context">{}</field>
    </record>

    <record id="action_cf_dev_graph_motivos" model="ir.actions.act_window">
        <field name="name">Motivos de devolución</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">graph</field>
        <field name="domain">[('motivo_devolucion','!=',False)]</field>
        <field name="context">{'graph_measure': '__count', 'graph_mode': 'bar', 'group_by': ['motivo_devolucion']}</field>
    </record>

    <record id="action_cf_dev_graph_tipo_error" model="ir.actions.act_window">
        <field name="name">Distribución por tipo de error</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">graph</field>
        <field name="domain">[('motivo_devolucion','!=',False)]</field>
        <field name="context">{'graph_measure': '__count', 'graph_mode': 'pie', 'group_by': ['tipo_error_devolucion']}</field>
    </record>

    <record id="action_cf_dev_graph_mes" model="ir.actions.act_window">
        <field name="name">Evolución mensual</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">graph</field>
        <field name="domain">[('motivo_devolucion','!=',False)]</field>
        <field name="context">{'graph_measure': '__count', 'graph_mode': 'line', 'group_by': ['fecha_devolucion:month']}</field>
    </record>

    <record id="action_cf_dev_pivot" model="ir.actions.act_window">
        <field name="name">Pivot de devoluciones</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">pivot</field>
        <field name="domain">[('motivo_devolucion','!=',False)]</field>
        <field name="context">{'pivot_measures': ['__count'], 'group_by': ['motivo_devolucion','tipo_error_devolucion']}</field>
    </record>

    <menuitem id="menu_cf_devolucion_dashboard"
              name="Dashboard de devoluciones"
              parent="sale.menu_sale_report"
              sequence="67"
              action="action_cf_devolucion_dashboard"/>
</odoo>