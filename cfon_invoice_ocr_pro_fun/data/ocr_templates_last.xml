<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="tpl_adt_tyco" model="invoice.ocr.template">
    <field name="name">ADT / Tyco Integrated Security (ES)</field>
    <field name="priority">5</field>
    <field name="language">spa</field>
    <field name="date_format">%d-%m-%Y</field>
    <field name="regex_invoice_number">(?i)(?:n[ºo]\s*de\s*factura|n[ºo]\s*factura|n[ºo]|factura|ISD)\s*[:/\-\s]*([A-Z0-9\-/]+)</field>
    <field name="regex_date">(?i)(?:fecha\s*factura|fecha)\s*[:\-\s]*([0-9]{2}[/-][0-9]{2}[/-][0-9]{4})</field>
    <field name="regex_total">(?i)(?:total\s*a\s*pagar|total\s*factura|importe\s*total)\s*[:\-\s]*([\d\.,]+)</field>
    <field name="regex_currency">(?i)\b(EUR)\b|([€])</field>
    <field name="regex_vat">(?i)\bB82115577\b</field>
    <field name="regex_due_date">(?i)(?:vencimiento|condiciones\s*de\s*pago).*?([0-9]{2}[/-][0-9]{2}[/-][0-9]{4})</field>
  </record>

  <record id="tpl_nanobytes" model="invoice.ocr.template">
    <field name="name">Nanobytes Informática y Telecomunicaciones S.L. (ES)</field>
    <field name="priority">6</field>
    <field name="language">spa</field>
    <field name="date_format">%d/%m/%Y</field>
    <field name="regex_invoice_number">(?i)(?:Factura\s*FR/|Factura\s*)([0-9]{4}/[0-9]+|FR/[0-9]{4}/[0-9]+|FR_[0-9]{4}_[0-9]+)</field>
    <field name="regex_date">(?i)(?:Fecha\s*de\s*factura|Fecha)\s*[:\-\s]*([0-9]{2}/[0-9]{2}/[0-9]{4})</field>
    <field name="regex_total">(?i)(?:Total)\s*([\d\.,]+)\s*€|(?:Importe\s*total)\s*[:\-\s]*([\d\.,]+)</field>
    <field name="regex_currency">(?i)\b(EUR)\b|([€])</field>
    <field name="regex_vat">(?i)\bESB19525138\b</field>
    <field name="regex_due_date">(?i)(?:Fecha\s*de\s*vencimiento|Vencimiento)\s*[:\-\s]*([0-9]{2}/[0-9]{2}/[0-9]{4})</field>
  </record>

  <record id="tpl_securitas_direct" model="invoice.ocr.template">
    <field name="name">Securitas Direct España SAU (ES)</field>
    <field name="priority">7</field>
    <field name="language">spa</field>
    <field name="date_format">%d/%m/%Y</field>
    <field name="regex_invoice_number">(?i)(?:N[ºo]\s*de\s*factura|N[ºo]\s*factura|N[ºo]|Factura\s*N[ºo]?|Factura)\s*[:\-\s]*([A-Z0-9\-/]+)</field>
    <field name="regex_date">(?i)(?:Fecha\s*de\s*factura|Fecha)\s*[:\-\s]*([0-9]{2}/[0-9]{2}/[0-9]{4})</field>
    <field name="regex_total">(?i)(?:Total\s*a\s*pagar|Total\s*factura|TOTAL)\s*[:\-\s]*([\d\.,]+)</field>
    <field name="regex_currency">(?i)\b(EUR)\b|([€])</field>
    <field name="regex_vat">(?i)\bA26106013\b</field>
  </record>

  <record id="tpl_guard_dv1" model="invoice.ocr.template">
    <field name="name">[Guard] DV1 Aduanas (No Factura)</field>
    <field name="priority">100</field>
    <field name="language">spa</field>
    <field name="regex_invoice_number">(?i)D\.V\.1</field>
  </record>
</odoo>
