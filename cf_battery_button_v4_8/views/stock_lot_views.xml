<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_stock_lot_form_inherit_bat100_v4_8" model="ir.ui.view">
        <field name="name">stock.lot.form.inherit.bat100.v4.8</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <group>
                    <field name="x_bat100" widget="boolean_toggle" string="Batería 100%"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_move_line_lot_form_inherit_bat100_v4_8" model="ir.ui.view">
        <field name="name">stock.move.line.form.inherit.bat100.v4.8</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_name']" position="after">
                <field name="x_bat100" widget="boolean_toggle" string="Batería 100%"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_lot_tree_inherit_bat100_v4_8" model="ir.ui.view">
        <field name="name">stock.lot.tree.inherit.bat100.v4.8</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="x_bat100" widget="boolean_toggle" string="Batería 100%"/>
            </xpath>
        </field>
    </record>
</odoo>
