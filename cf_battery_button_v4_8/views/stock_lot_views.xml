<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- ============================== -->
    <!-- VISTA FORMULARIO -->
    <!-- ============================== -->
    <record id="view_stock_lot_form_inherit_bat100_v6_1" model="ir.ui.view">
        <field name="name">stock.lot.form.inherit.bat100.v6.1</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <div style="display:flex; align-items:center; gap:10px; margin-top:8px;">
                    <label string="Batería 100%" for="x_bat100"
                           style="font-weight:600; font-size:15px; color:#333; margin-right:4px;"/>
                    <div style="transform:scale(0.6); transform-origin:left center;">
                        <field name="x_bat100" widget="boolean_toggle" class="oe_inline"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

    <!-- ============================== -->
    <!-- VISTA ÁRBOL -->
    <!-- ============================== -->
    <record id="view_stock_lot_tree_inherit_bat100_v6_1" model="ir.ui.view">
        <field name="name">stock.lot.tree.inherit.bat100.v6.1</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="x_bat100" widget="boolean_toggle" string="Batería 100%" options="{'size': 'small'}"/>
            </xpath>
        </field>
    </record>

    <!-- ============================== -->
    <!-- POPUP DE MOVIMIENTOS DE STOCK -->
    <!-- ============================== -->
    <record id="view_move_line_lot_form_inherit_bat100_v6_1" model="ir.ui.view">
        <field name="name">stock.move.line.form.inherit.bat100.v6.1</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='lot_name']" position="after">
                <field name="x_bat100" widget="boolean_toggle" string="Batería 100%" options="{'size': 'small'}"/>
            </xpath>
        </field>
    </record>

    <!-- ============================== -->
    <!-- VISTA KANBAN (CORREGIDA Y SEGURA) -->
    <!-- ============================== -->
    <record id="view_stock_lot_kanban_inherit_bat100_v6_1" model="ir.ui.view">
        <field name="name">stock.lot.kanban.inherit.bat100.v6.1</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_kanban"/>
        <field name="arch" type="xml">
            <!-- Añadimos el campo a la carga -->
            <xpath expr="//kanban" position="inside">
                <field name="x_bat100"/>
            </xpath>

            <!-- Insertamos el icono 🔋 después del nombre -->
            <xpath expr="//strong[@class='o_kanban_record_title']/field[@name='name']" position="after">
                <t t-if="record.x_bat100 and record.x_bat100.value">
                    <span style="margin-left:6px; font-size:11px; background-color:#00b050; color:white;
                                 border-radius:6px; padding:2px 5px;"
                          t-att-title="'Batería 100%'">
                        🔋
                    </span>
                </t>
            </xpath>
        </field>
    </record>
</odoo>
