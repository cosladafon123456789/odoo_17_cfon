    <record id="view_stock_lot_form_inherit_bat100_v7_0" model="ir.ui.view">
        <field name="name">stock.lot.form.inherit.bat100.v7.0</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <div style="display:flex;align-items:center;gap:8px;margin-top:6px;">
                    <label string="BaterÃ­a 100%" for="x_bat100"
                           style="font-weight:600;font-size:14px;color:#333;"/>
                    <field name="x_bat100" widget="boolean_toggle" class="oe_inline"
                           style="transform:scale(0.8);"/>
                </div>
            </xpath>
        </field>
    </record>

    <!-- LISTA -->
    <record id="view_stock_lot_tree_inherit_bat100_v7_0" model="ir.ui.view">
        <field name="name">stock.lot.tree.inherit.bat100.v7.0</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="x_bat100" widget="boolean_toggle" string="BaterÃ­a 100%" options="{'size': 'small'}"/>
            </xpath>
        </field>
    </record>

    <!-- KANBAN -->
    <record id="view_stock_lot_kanban_inherit_bat100_v7_0" model="ir.ui.view">
        <field name="name">stock.lot.kanban.inherit.bat100.v7_0</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_kanban"/>
        <field name="arch" type="xml">

            <!-- Cargar campo -->
            <xpath expr="//kanban" position="inside">
                <field name="x_bat100"/>
            </xpath>

            <!-- Icono verde arriba a la derecha -->
            <xpath expr="//div[contains(@class,'oe_kanban_details')]" position="inside">
                <div style="
                    position:absolute;
                    top:4px;
                    right:8px;
                    background-color:#00b050;
                    color:white;
                    border-radius:50%;
                    width:22px;
                    height:22px;
                    display:flex;
                    align-items:center;
                    justify-content:center;
                    font-size:12px;
                    box-shadow:0 0 3px rgba(0,0,0,0.2);
