<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- FORMULARIO -->
    <record id="view_stock_lot_form_inherit_bat100_v7_1_debug" model="ir.ui.view">
        <field name="name">stock.lot.form.inherit.bat100.v7.1.debug</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <div style="display:flex;align-items:center;gap:8px;margin-top:6px;">
                    <label string="BaterÃ­a 100%" for="x_bat100"
                           style="font-weight:600;font-size:14px;color:#333;"/>
                    <field name="x_bat100" widget="boolean_toggle" class="oe_inline"
                           style="transform:scale(0.8);"/>
                </div>
            </xpath>
        </field>
    </record>

    <!-- KANBAN -->
    <record id="view_stock_lot_kanban_inherit_bat100_v7_1_debug" model="ir.ui.view">
        <field name="name">stock.lot.kanban.inherit.bat100.v7.1.debug</field>
        <field name="model">stock.lot</field>
        <field name="inherit_id" ref="stock.view_production_lot_kanban"/>
        <field name="arch" type="xml">

            <!-- Cargar campo -->
            <xpath expr="//kanban" position="inside">
                <field name="x_bat100"/>
            </xpath>

            <!-- Mostrar valor real arriba a la derecha -->
            <xpath expr="//div[contains(@class,'oe_kanban_details')]" position="inside">
                <t>
                    <div style="
                        position:absolute;
                        top:4px;
                        right:8px;
                        background:#ccc;
                        color:black;
                        border-radius:6px;
                        padding:1px 4px;
                        font-size:11px;
                    ">
                        <t t-esc="record.x_bat100"/>
                        <t t-esc="record.x_bat100.value"/>
                        <t t-esc="record.x_bat100.raw_value"/>
                        <t t-esc="record.data.x_bat100"/>
                    </div>
                </t>
            </xpath>
        </field>
    </record>
</odoo>
