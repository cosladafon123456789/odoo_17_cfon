<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website.sale.delivery</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <setting id="no_edit_order" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="order_cancel">
                    <div class="o_setting_left_pane">
                        <field name="send_cancel_mail" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="send_cancel_mail" />
                        <label for="send_cancel_mail_to" invisible="not send_cancel_mail" />
                        <div>
                            <field
                                name="send_cancel_mail_to"
                                widget="many2many_tags"
                                invisible="not send_cancel_mail"
                            />
                        </div>
                    </div>
                </div>
            </setting>
        </field>
    </record>


</odoo>
