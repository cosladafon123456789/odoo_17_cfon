
<odoo>
    <record id="view_repair_report_tree_cfon" model="ir.ui.view">
        <field name="name">repair.report.tree.cfon</field>
        <field name="model">repair.report</field>
        <field name="arch" type="xml">
            <tree string="Informe de Reparaciones" default_order="date desc">
                <field name="date"/>
                <field name="technician_id"/>
                <field name="reason"/>
                <field name="repair_id"/>
            </tree>
        </field>
    </record>

    <record id="view_repair_report_graph_cfon" model="ir.ui.view">
        <field name="name">repair.report.graph.cfon</field>
        <field name="model">repair.report</field>
        <field name="arch" type="xml">
            <graph string="Reparaciones por día / motivo" type="bar">
                <field name="date" type="row" interval="day"/>
                <field name="reason" type="col"/>
                <field name="id" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="view_repair_report_search_cfon" model="ir.ui.view">
        <field name="name">repair.report.search.cfon</field>
        <field name="model">repair.report</field>
        <field name="arch" type="xml">
            <search string="Buscar informe">
                <field name="technician_id"/>
                <field name="reason"/>
                <field name="repair_id"/>
                <field name="date"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Técnico" context="{'group_by': 'technician_id'}"/>
                    <filter string="Motivo" context="{'group_by': 'reason'}"/>
                    <filter string="Día" context="{'group_by': 'date:day'}"/>
                </group>
            </search>
        </field>
    </record>
</odoo>
