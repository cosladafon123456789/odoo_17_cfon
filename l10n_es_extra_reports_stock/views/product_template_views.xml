<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_template_form_inherit" model="ir.ui.view">
            <field name="name">product.template.form.inherit</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <page name="inventory" position="after">
                    <page string="Plastic Types" name="plastic_types" invisible="detailed_type == 'service' or product_variant_count &gt; 1">
                        <field name="plastic_type_ids">
                            <tree editable="bottom">
                                <field name="plastic_type_id" />
                                <field name="plastic_fiscal_position_id" />
                                <field name="kg" />
                                <field name="kg_not_recycled" />
                            </tree>
                        </field>
                    </page>
                </page>
            </field>
        </record>

    </data>
</odoo>